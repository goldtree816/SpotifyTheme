  .testimonial-text { padding-left: 32px; font-size: 1.1rem; }
  .testimonial-text::before { font-size: 3rem; top: -15px; }
  .testimonials-stats { grid-template-columns: 1fr; gap: 32px; padding: 40px 20px; margin-bottom: 40px; }
  .stat-item::after { display: none; }
