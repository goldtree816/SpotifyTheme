<section class="newsletter" aria-label="Subscribe to our newsletter">
  <div class="newsletter__inner">
    <div class="newsletter__text reveal">
      <h2>Stay in the loop</h2>
      <p>Exclusive drops, early access, and insider dealsâ€”straight to your inbox.</p>
    </div>
    <form class="newsletter__form reveal" method="post" action="/contact#newsletter" accept-charset="UTF-8">
      <input type="hidden" name="form_type" value="customer" />
      <input type="hidden" name="contact[tags]" value="newsletter" />
      <input aria-label="Email" class="newsletter__input" type="email" name="contact[email]" placeholder="Enter your email" required>
      <button type="submit" class="newsletter__btn">Subscribe</button>
    </form>
  </div>
</section>

<style>
.newsletter { padding: 40px 16px; }
.newsletter__inner {
  max-width: 1000px; margin: 0 auto; display: grid; grid-template-columns: 1.2fr 1fr; gap: 16px;
  background: linear-gradient(180deg, rgba(25,118,210,0.06), rgba(25,118,210,0.03)); border: 1px solid #e6eef9; border-radius: 14px; padding: 20px;
}
.newsletter__text h2 { margin: 0 0 8px 0; font-size: clamp(1.25rem, 1rem + 1.2vw, 1.75rem); }
.newsletter__text p { margin: 0; color: #555; }
.newsletter__form { display: grid; grid-template-columns: 1fr auto; gap: 10px; align-self: center; }
.newsletter__input {
  padding: 12px 14px; border: 1.5px solid #d0d7de; border-radius: 10px; outline: none; font-size: 1rem;
}
.newsletter__input:focus { border-color: var(--color-primary, #1976d2); box-shadow: 0 0 0 3px rgba(25,118,210,0.12); }
.newsletter__btn {
  padding: 12px 18px; border: none; border-radius: 10px; color: #fff; font-weight: 700; cursor: pointer;
  background: linear-gradient(135deg, #1D1D1F 0%, var(--color-primary, #1976d2) 100%);
}
.newsletter__btn:hover { filter: brightness(1.05); }

@media (max-width: 800px) {
  .newsletter__inner { grid-template-columns: 1fr; }
}
</style>

{% schema %}
{
  "name": "Newsletter signup",
  "settings": [],
  "presets": [
    { "name": "Newsletter signup" }
  ]
}
{% endschema %}

