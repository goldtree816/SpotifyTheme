  {% stylesheet %}
  .navbar {
    background: #5c6e87;
    padding: 0;
    width: 100%;
  }
  .navbar__container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0.5rem 2rem;
  }
  .navbar__logo-circle {
    display: flex;
    align-items: center;
    justify-content: center;
    background: #fff;
    border-radius: 50%;
    width: 80px;
    height: 80px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.06);
    margin-right: 1rem;
  }
  .navbar__logo-img {
    height: 60px;
    width: 60px;
    object-fit: contain;
    border-radius: 50%;
    display: block;
  }
  .navbar__links {
    display: flex;
    gap: 1rem;
    list-style: none;
    margin: 0;
    padding: 0;
    align-items: center;
  }
  .navbar__links a {
    color: #fff;
    text-decoration: none;
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: 2px;
    transition: background 0.2s;
  }
  .navbar__links a:hover,
  .navbar__link--sale {
    background: #1abc9c;
    color: #fff;
  }
  .navbar__link--sale {
    background: #1abc9c;
    color: #fff;
    font-weight: bold;
  }
  .navbar__actions {
    display: flex;
    align-items: center;
    gap: 1.25rem;
    margin-left: 1.5rem;
  }
  .navbar__action-link {
    display: flex;
    align-items: center;
    color: #fff;
    text-decoration: none;
    font-weight: 500;
    gap: 0.5rem;
    opacity: 0.9;
    transition: opacity 0.2s;
  }
  .navbar__action-link:hover {
    opacity: 1;
    text-decoration: underline;
  }
  .navbar__action-link svg {
    display: block;
  }
  .navbar__action-text {
    display: none;
  }
  @media screen and (min-width: 700px) {
    .navbar__action-text {
      display: inline;
    }
  }
  @media screen and (max-width: 900px) {
    .navbar__container {
      flex-direction: column;
      align-items: stretch;
      gap: 1rem;
    }
    .navbar__links {
      flex-wrap: wrap;
      gap: 0.5rem;
      justify-content: center;
    }
    .navbar__logo-circle {
      margin: 0 auto 1rem auto;
    }
    .navbar__search-wrap {
      margin-left: 0;
      width: 100%;
      justify-content: center;
    }
    .navbar__search {
      max-width: 100%;
    }
  }
  .navbar__search {
    display: flex;
    align-items: center;
    max-width: 160px;
    min-width: 0;
    width: 100%;
    background: #fff;
    border-radius: 2px;
    box-shadow: 0 1px 4px rgba(0,0,0,0.04);
    padding: 0 0.25rem;
    position: relative;
  }
  .navbar__search-input {
    flex: 1;
    padding: 0.25rem 0.5rem;
    border: none;
    font-size: 0.95rem;
    background: transparent;
    outline: none;
    min-width: 0;
  }
  .navbar__search-btn {
    background: #f5f5f5;
    border: none;
    border-radius: 50%;
    width: 38px;
    height: 38px;
    margin-left: 0.25rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.2s;
    box-shadow: 0 1px 4px rgba(0,0,0,0.08);
    padding: 0;
  }
  .navbar__search-btn:hover {
    background: #e0e0e0;
  }
  .navbar__search-icon {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .navbar__dropdown-parent {
    position: relative;
  }
  .navbar__dropdown {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    background: #fff;
    min-width: 180px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    border-radius: 4px;
    z-index: 10;
    padding: 0.5rem 0;
    margin: 0;
    list-style: none;
  }
  .navbar__dropdown li {
    width: 100%;
  }
  .navbar__dropdown a {
    display: block;
    color: #333;
    padding: 0.5rem 1.25rem;
    text-decoration: none;
    transition: background 0.2s;
    border-radius: 0;
  }
  .navbar__dropdown a:hover {
    background: #f5f5f5;
    color: #1abc9c;
  }
  .navbar__dropdown-parent:hover > .navbar__dropdown {
    display: block;
  }
  .cart-drawer {
    position: fixed;
    top: 0;
    right: 0;
    width: 370px;
    max-width: 100vw;
    height: 100vh;
    background: #fff;
    box-shadow: -2px 0 16px rgba(0,0,0,0.12);
    z-index: 1000;
    transform: translateX(100%);
    transition: transform 0.3s cubic-bezier(.4,0,.2,1);
    display: flex;
    flex-direction: column;
    padding: 0;
  }
  .cart-drawer.open {
    transform: translateX(0);
  }
  .cart-drawer__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.5rem;
    border-bottom: 1px solid #eee;
    background: #f8f8f8;
  }
  .cart-drawer__close {
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    color: #333;
  }
  .cart-drawer__body {
    flex: 1;
    overflow-y: auto;
    padding: 1.5rem;
  }
  .cart-drawer__footer {
    padding: 1rem 1.5rem;
    border-top: 1px solid #eee;
    background: #f8f8f8;
  }
  .navbar__cart-btn {
    display: flex;
    align-items: center;
    color: #fff;
    text-decoration: none;
    font-weight: 500;
    gap: 0.5rem;
    opacity: 0.9;
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
    transition: opacity 0.2s;
  }
  .navbar__cart-btn:hover {
    opacity: 1;
    text-decoration: underline;
  }
  .navbar__cart-btn svg {
    display: block;
  }
  .cart-count-badge {
    background: #1abc9c;
    color: #fff;
    border-radius: 50%;
    font-size: 0.8rem;
    padding: 0.1em 0.6em;
    margin-left: 0.3em;
    vertical-align: top;
    display: inline-block;
  }
  {% endstylesheet %}

</nav>

<div id="cart-drawer" class="cart-drawer" aria-hidden="true">
  <div class="cart-drawer__header">
    <h2>Cart</h2>
    <button class="cart-drawer__close" id="cart-drawer-close" aria-label="Close cart">&times;</button>
  </div>
  <div class="cart-drawer__body" id="cart-drawer-body">
    <!-- Cart items will be loaded here by JS -->
  </div>
  <div class="cart-drawer__footer" id="cart-drawer-footer">
    <!-- Cart totals and checkout button will be loaded here by JS -->
  </div>
</div>
<script src="{{ 'cart-drawer.js' | asset_url }}" defer></script>
<script src="{{ 'navbar-search.js' | asset_url }}" defer></script>

