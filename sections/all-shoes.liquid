<div class="all-shoes-section">
  <h2 class="all-shoes-heading">{{ section.settings.heading | default: 'ALL SHOES' }}</h2>
  <div class="all-shoes-grid">
    {% assign shoes = 
      '[
        {"img": "menshoeGEL1130.jpg", "name": "ASICS GEL-1130", "price": 120},
        {"img": "menshoeNB9060.webp", "name": "New Balance 9060", "price": 150},
        {"img": "menshoeOZWEEGO.avif", "name": "Adidas Ozweego", "price": 110},
        {"img": "menshoeSAMBA.avif", "name": "Adidas Samba", "price": 100},
        {"img": "menshoeVEJA.webp", "name": "Veja V-10", "price": 130},
        {"img": "menshoeZOOMVOMERO.webp", "name": "Nike Zoom Vomero", "price": 140},
        {"img": "nb550.jpg", "name": "New Balance 550", "price": 125},
        {"img": "nb550.webp", "name": "New Balance 550 Alt", "price": 125},
        {"img": "adidas-samba-sneakers-amy4.jpg", "name": "Adidas Samba Amy", "price": 105},
        {"img": "jordan.jpg", "name": "Air Jordan 1", "price": 160}
      ]' | parse_json %}
    {% for shoe in shoes %}
      <div class="shoe-card">
        <img src="{{ shoe.img | asset_url }}" alt="{{ shoe.name }}" class="shoe-img">
        <div class="shoe-info">
          <div class="shoe-name">{{ shoe.name }}</div>
          <div class="shoe-price">${{ shoe.price }}</div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<style>
.all-shoes-section {
  padding: 48px 0 32px 0;
  background: #fff;
  max-width: 100%;
}
.all-shoes-heading {
  font-size: 2.2rem;
  font-weight: bold;
  letter-spacing: 2px;
  margin-bottom: 32px;
  text-align: left;
  padding-left: 32px;
}
.all-shoes-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 32px;
  max-width: 1600px;
  margin: 0 auto;
  justify-content: flex-start;
}
.shoe-card {
  width: 220px;
  background: #f7f7f7;
  border-radius: 8px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2px 8px rgba(0,0,0,0.04);
  margin-bottom: 24px;
}
.shoe-img {
  width: 100%;
  height: 160px;
  object-fit: contain;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.shoe-info {
  padding: 16px;
  text-align: left;
  width: 100%;
}
.shoe-name {
  font-size: 1rem;
  margin-bottom: 8px;
}
.shoe-price {
  font-weight: bold;
  font-size: 1.1rem;
  margin-bottom: 4px;
}
</style> 