<div class="sneaker-description-section">
  <div class="sneaker-description-content">
    <h1 class="sneaker-description-heading">
      {{ section.settings.heading | default: 'SNEAKERS AVAILABLE AT GOLDTREE' }}
    </h1>
    <p class="sneaker-description-text">
      {{ section.settings.description | default: 'Discover the latest and greatest sneakers at Goldtree. Our curated collection features top brands, exclusive releases, and timeless classics. Whether you are a sneakerhead or just looking for comfortable, stylish footwear, Goldtree has something for everyone. Shop now and step up your sneaker game!' }}
    </p>
  </div>
  <div class="sneaker-description-logo">
    {% if section.settings.logo != blank %}
      <img src="{{ section.settings.logo | image_url: width: 80 }}" alt="Goldtree Logo">
    {% else %}
      <img src="{{ 'logo.png' | asset_url }}" alt="Goldtree Logo">
    {% endif %}
  </div>
</div>

<style>
.sneaker-description-section {
  background: #111;
  color: #fff;
  text-align: center;
  padding: 64px 16px 32px 16px;
  max-width: 100vw;
}
.sneaker-description-heading {
  font-size: 2.5rem;
  font-weight: bold;
  letter-spacing: 2px;
  margin-bottom: 32px;
  text-transform: uppercase;
}
.sneaker-description-text {
  font-size: 1.2rem;
  max-width: 900px;
  margin: 0 auto 48px auto;
  line-height: 1.7;
}
.sneaker-description-logo {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 32px;
}
.sneaker-description-logo img {
  width: 64px;
  height: auto;
}
</style>

{% schema %}
{
  "name": "Sneaker Description",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "SNEAKERS AVAILABLE AT GOLDTREE"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover the latest and greatest sneakers at Goldtree. Our curated collection features top brands, exclusive releases, and timeless classics. Whether you are a sneakerhead or just looking for comfortable, stylish footwear, Goldtree has something for everyone. Shop now and step up your sneaker game!"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo (upload to override default)"
    }
  ],
  "presets": [
    {
      "name": "Sneaker Description"
    }
  ]
}
{% endschema %} 