    image: "/assets/nb550.webp"
  }
];

function getQueryParam(param) {
  const urlParams = new URLSearchParams(window.location.search);
  return urlParams.get(param);
}

function renderShoeDetail() {
  const shoeId = parseInt(getQueryParam('shoe'));
  // Prefer Shopify editor blocks if present, else fallback to default
  const shoes = (window.shoeBlocks && window.shoeBlocks.length > 0) ? window.shoeBlocks : defaultShoes;
  const shoe = shoes[shoeId] || shoes[0];
  const container = document.getElementById('shoe-detail-container');
  if (!container) return;
  container.innerHTML = `
    <div class="shoe-detail-page">
      <div class="shoe-detail-img-col">
        <img src="${shoe.image ? shoe.image : '/assets/placeholder.png'}" alt="${shoe.title}" class="shoe-detail-img" />
      </div>
      <div class="shoe-detail-info-col">
        <h1 class="shoe-detail-title">${shoe.title}</h1>
        <div class="shoe-detail-price">$${shoe.price}</div>
        <div class="shoe-detail-desc">${shoe.desc}</div>
        <button class="shoe-detail-addcart">Add to Cart</button>
      </div>
    </div>
  `;
}

document.addEventListener('DOMContentLoaded', renderShoeDetail);
</script>

