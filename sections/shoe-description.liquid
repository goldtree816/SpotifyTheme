<script>
// Output block data from Shopify editor as a JS array
window.shoeBlocks = [
  {% for block in section.blocks %}
    {
      title: {{ block.settings.title | json }},
      price: {{ block.settings.price | json }},
      desc: {{ block.settings.desc | json }},
      image: {% if block.settings.image != blank %}"{{ block.settings.image | image_url: width: 800 }}"{% else %}null{% endif %}
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
];

// Default shoe data (should match your gallery order)
const defaultShoes = [
  {
    title: "GEL-1130",
    price: "120",
    desc: "Premium running shoe",
    image: "/assets/menshoeGEL1130.jpg"
  },
  {
