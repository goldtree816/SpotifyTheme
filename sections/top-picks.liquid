        {% if men_section and men_section.blocks.size > 0 %}
          {% for block in men_section.blocks %}
            <div class="top-pick-card big">
              {% if block.settings.image != blank %}
                <img src="{{ block.settings.image | image_url: width: 600 }}" alt="{{ block.settings.title }}" class="top-pick-img" loading="lazy" width="600" height="180">
              {% endif %}
              <div class="top-pick-title">{{ block.settings.title }}</div>
              <div class="top-pick-price">${{ block.settings.price }}</div>
              {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}" class="top-pick-btn">Shop Now</a>
              {% endif %}
