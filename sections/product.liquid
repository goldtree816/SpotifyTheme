  align-items: center;
  gap: 1rem;
  flex-wrap: wrap;
}

.product-page__price-main {
  font-size: 2rem;
  font-weight: 700;
  color: #007bff;
}

.product-page__price-old {
  font-size: 1.25rem;
  color: #6c757d;
  text-decoration: line-through;
}

.product-page__price-save {
  background: #28a745;
  color: white;
  padding: 0.25rem 0.75rem;
  border-radius: 4px;
  font-size: 0.875rem;
  font-weight: 600;
}

.product-page__payment {
  background: #f8f9fa;
  padding: 1rem;
  border-radius: 8px;
}

.product-page__payment-info {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.product-page__availability {
  margin: 1rem 0;
}

.product-page__in-stock {
  background: #28a745;
  color: white;
  padding: 0.5rem 1rem;
  border-radius: 4px;
  font-weight: 600;
}

.product-page__out-of-stock {
