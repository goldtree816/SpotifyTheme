/* Product Page Responsive Styles */
.product-page {
  padding: 2rem 0;
  max-width: 1400px;
  margin: 0 auto;
}

.product-page__container {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 3rem;
  padding: 0 2rem;
}

.product-page__media {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.product-page__main-image {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #f8f9fa;
  border-radius: 8px;
  padding: 2rem;
}

.product-page__img {
  max-width: 100%;
  height: auto;
  border-radius: 4px;
}

.product-page__thumbnails {
  display: flex;
  gap: 1rem;
  align-items: center;
}

.product-page__thumbnails-container {
  display: flex;
  gap: 0.5rem;
  overflow-x: auto;
  scrollbar-width: none;
  -ms-overflow-style: none;
}

.product-page__thumbnails-container::-webkit-scrollbar {
  display: none;
}

.product-page__thumb-btn {
  flex-shrink: 0;
  width: 80px;
  height: 80px;
  border: 2px solid transparent;
  border-radius: 4px;
  cursor: pointer;
  background: #f8f9fa;
  padding: 0.5rem;
  transition: border-color 0.2s;
}

.product-page__thumb-btn--active {
  border-color: #007bff;
}

.product-page__thumb-img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.product-page__features {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
}

.product-page__feature {
  background: #e9ecef;
  padding: 0.5rem 1rem;
  border-radius: 20px;
  font-size: 0.875rem;
  font-weight: 500;
}

.product-page__info {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.product-page__title {
  font-size: 2.5rem;
  font-weight: 700;
  margin: 0;
  line-height: 1.2;
}

.product-page__part-number {
  color: #6c757d;
  font-size: 1rem;
  margin: 0;
}

.product-page__reviews {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.product-page__stars {
  display: flex;
  gap: 0.25rem;
}

.product-page__review-count {
