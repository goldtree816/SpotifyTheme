<!-- FAQ Section -->
<section class="faq">
  <link rel="stylesheet" href="{{ 'faq.css' | asset_url }}">
  <div class="faq__container">
    <h1 class="faq__title">{{ section.settings.title }}</h1>
    <div class="faq__intro">{{ section.settings.intro }}</div>
    {% for block in section.blocks %}
      <div class="faq__group">
        <h2 class="faq__group-title">{{ block.settings.icon }} {{ block.settings.heading }}</h2>
        <div class="faq__qna-list">
          {% assign faqs = block.settings.qna | newline_to_br | split: '<br />' %}
          {% for item in faqs %}
            {% assign parts = item | split: 'A:' %}
            {% if parts.size == 2 %}
              <div class="faq__qna">
                <div class="faq__question"><strong>Q:</strong> {{ parts[0] | remove: 'Q:' | strip }}</div>
                <div class="faq__answer"><strong>A:</strong> {{ parts[1] | strip }}</div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    {% endfor %}
    <div class="faq__contact">
      <h2 class="faq__group-title"><i class="fas fa-comments"></i> Still have questions?</h2>
      <div class="faq__contact-content">{{ section.settings.contact }}</div>
    </div>
  </div>
</section>

