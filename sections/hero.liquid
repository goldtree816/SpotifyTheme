<section class="hero">
  <div class="hero__container" style="text-align: center; padding: 4rem 2rem;">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.description }}</p>
  </div>
</section>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Aura Wear"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover fashion that feels as good as it looks."
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
