{{ 'customer-account.css' | asset_url | stylesheet_tag }}

<div class="customer-account__layout">
  <aside class="customer-account__sidebar">
    <div class="customer-account__profile">
      <div class="customer-account__profile-icon">
        {{ customer.first_name | slice: 0, 1 | upcase | default: customer.name | slice: 0, 1 | upcase }}
      </div>
      <div class="customer-account__profile-name">{{ customer.first_name | default: customer.name }}</div>
      <div class="customer-account__profile-email">{{ customer.email }}</div>
    </div>
    <nav class="customer-account__nav">
      <a href="#addresses" class="customer-account__nav-link active" id="nav-addresses">Addresses</a>
      <a href="#orders" class="customer-account__nav-link" id="nav-orders">Order History</a>
    </nav>
  </aside>
  <main class="customer-account__main">
    <section class="customer-account__section customer-account__address-section" id="addresses-section">
      <h2 class="customer-account__section-title">Address</h2>
      <div class="customer-account__address-content">
        {{ customer.default_address | format_address }}
      </div>
      <a href="{{ routes.account_addresses_url }}" class="customer-account__addresses-link">
        Manage addresses ({{ customer.addresses_count }})
      </a>
    </section>
    <section class="customer-account__section customer-account__orders-section" id="orders-section" style="display:none;">
      <h2 class="customer-account__section-title">Order History</h2>
      {% paginate customer.orders by 20 %}
        {%- if customer.orders.size > 0 -%}
          <div class="customer-account__table-wrapper">
            <table class="customer-account__order-table">
              <caption class="visually-hidden">Order History</caption>
              <thead>
                <tr>
                  <th>Order</th>
                  <th>Date</th>
                  <th>Payment</th>
                  <th>Fulfillment</th>
                  <th>Total</th>
                </tr>
              </thead>
              <tbody>
                {%- for order in customer.orders -%}
                  <tr>
                    <td>
                      <a href="{{ order.customer_url }}" aria-label="View order {{ order.name }}">{{ order.name }}</a>
                    </td>
                    <td>{{ order.created_at | time_tag: format: 'date' }}</td>
                    <td>{{ order.financial_status_label }}</td>
                    <td>{{ order.fulfillment_status_label }}</td>
                    <td>{{ order.total_net_amount | money_with_currency }}</td>
                  </tr>
                {%- endfor -%}
              </tbody>
            </table>
          </div>
        {%- else -%}
          <p class="customer-account__no-orders">You have not placed any orders yet.</p>
        {%- endif -%}
        {%- if paginate.pages > 1 and paginate.parts.size > 0 -%}
          <nav class="customer-account__pagination" role="navigation" aria-label="Pagination">
            <ul>
              {%- if paginate.previous -%}
                <li><a href="{{ paginate.previous.url }}" aria-label="Previous page">&laquo;</a></li>
              {%- endif -%}
              {%- for part in paginate.parts -%}
                <li>
                  {%- if part.is_link -%}
                    <a href="{{ part.url }}" aria-label="Go to page {{ part.title }}">{{- part.title -}}</a>
                  {%- elsif part.title == paginate.current_page -%}
                    <span aria-current="page">{{- part.title -}}</span>
                  {%- else -%}
                    <span>{{ part.title }}</span>
                  {%- endif -%}
                </li>
              {%- endfor -%}
              {%- if paginate.next -%}
                <li><a href="{{ paginate.next.url }}" aria-label="Next page">&raquo;</a></li>
              {%- endif -%}
            </ul>
          </nav>
        {%- endif -%}
      {% endpaginate %}
    </section>
  </main>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  var navAddresses = document.getElementById('nav-addresses');
  var navOrders = document.getElementById('nav-orders');
  var addressesSection = document.getElementById('addresses-section');
  var ordersSection = document.getElementById('orders-section');

  navAddresses.addEventListener('click', function(e) {
    e.preventDefault();
    navAddresses.classList.add('active');
    navOrders.classList.remove('active');
    addressesSection.style.display = '';
    ordersSection.style.display = 'none';
  });
  navOrders.addEventListener('click', function(e) {
    e.preventDefault();
    navOrders.classList.add('active');
    navAddresses.classList.remove('active');
    addressesSection.style.display = 'none';
    ordersSection.style.display = '';
  });
});
</script>

{% schema %}
{
  "name": "t:sections.main-account.name",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
