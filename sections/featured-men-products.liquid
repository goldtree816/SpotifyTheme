<div class="featured-men-products">
  <h2 class="featured-men-heading">{{ section.settings.heading }}</h2>
  <div class="featured-men-products-wrapper">
    <div class="featured-men-slider-wrapper">
      <div class="featured-men-slider" id="featured-men-slider">
        {% for block in section.blocks %}
          {% assign product = all_products[block.settings.product] %}
          <div class="featured-men-card" {{ block.shopify_attributes }}>
            {% if product and product.featured_image %}
              <img src="{{ product.featured_image | img_url: '400x' }}" alt="{{ product.title }}" class="featured-men-img" loading="lazy">
            {% endif %}
            <div class="featured-men-info">
              <div class="featured-men-title">{{ product.title }}</div>
              <div class="featured-men-price">{{ product.price | money }}</div>
              <a href="/products/{{ product.handle }}" class="featured-men-link">Shop Now</a>
            </div>
          </div>
        {% endfor %}
      </div>
      {% if section.blocks.size > 4 %}
        <button class="slider-arrow left" onclick="slideFeaturedMen(-1)">&#8592;</button>
        <button class="slider-arrow right" onclick="slideFeaturedMen(1)">&#8594;</button>
      {% endif %}
    </div>
  </div>
</div>

<style>
.featured-men-products { padding: 32px 0; background: #fff; }
.featured-men-heading { text-align: center; margin-bottom: 24px; font-size: 2rem; font-weight: bold; }
.featured-men-products-wrapper { max-width: 1120px; margin: 0 auto; }
.featured-men-slider-wrapper { position: relative; overflow: hidden; }
.featured-men-slider { display: flex; gap: 32px; transition: transform 0.3s; padding: 0 20px; }
.featured-men-card { width: 250px; min-width: 250px; background: #f7f7f7; border-radius: 12px; overflow: hidden; display: flex; flex-direction: column; align-items: center; box-shadow: 0 2px 8px rgba(0,0,0,0.04); }
.featured-men-img { width: 100%; height: 180px; object-fit: contain; background: #fff; }
.featured-men-info { padding: 12px; text-align: center; }
.featured-men-title { font-size: 1.1rem; font-weight: bold; margin-bottom: 6px; }
.featured-men-price { font-size: 1.1rem; font-weight: bold; color: #333; margin-bottom: 8px; }
.featured-men-link { color: #fff; background: #111; border-radius: 4px; padding: 8px 16px; text-decoration: none; font-size: 1rem; display: inline-block; margin-bottom: 8px; transition: background 0.2s; }
.featured-men-link:hover { background: #0071e3; }
.slider-arrow { position: absolute; top: 50%; transform: translateY(-50%); background: #fff; border: 1px solid #ccc; border-radius: 50%; width: 36px; height: 36px; font-size: 1.5rem; cursor: pointer; z-index: 2; }
.slider-arrow.left { left: 0; }
.slider-arrow.right { right: 0; }
</style>

<script>
function slideFeaturedMen(dir) {
  var slider = document.getElementById('featured-men-slider');
  if (!slider) return;
  var cardWidth = 282; // 250px + 32px gap
  var visible = 4;
  var total = slider.children.length;
  var maxSlide = Math.max(0, total - visible);
  var current = parseInt(slider.dataset.slide) || 0;
  var next = current + dir;
  next = Math.max(0, Math.min(next, maxSlide));
  slider.style.transform = 'translateX(' + (-next * cardWidth) + 'px)';
  slider.dataset.slide = next;
}
</script>

{% schema %}
{
  "name": "Featured Men Products",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Men's Products"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Featured Product",
      "limit": 6,
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Men Products",
      "blocks": []
    }
  ]
}
{% endschema %} 