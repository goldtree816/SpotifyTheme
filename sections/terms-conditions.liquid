<section class="terms-conditions">
  <div class="terms-conditions__container">
    <h1 class="terms-conditions__title">{{ section.settings.heading }}</h1>
    <div class="terms-conditions__content">
      {{ section.settings.content }}
    </div>
  </div>

  {% stylesheet %}
  .terms-conditions {
    background: #ffffff;
    color: #333333;
    padding: 3rem 0;
    min-height: 100vh;
  }
  .terms-conditions__container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }
  .terms-conditions__title {
    font-size: 2.5rem;
    font-weight: bold;
    color: #333333;
    margin-bottom: 2rem;
    text-align: center;
  }
  .terms-conditions__content {
    background: #ffffff;
    border: 1px solid #e1e5e9;
    border-radius: 12px;
    padding: 2rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    line-height: 1.7;
    color: #666666;
  }
  .terms-conditions__content h2 {
    color: #333333;
    font-size: 1.5rem;
    font-weight: bold;
    margin: 2rem 0 1rem 0;
  }
  .terms-conditions__content h2:first-child {
    margin-top: 0;
  }
  .terms-conditions__content h3 {
    color: #333333;
    font-size: 1.2rem;
    font-weight: bold;
    margin: 1.5rem 0 0.75rem 0;
  }
  .terms-conditions__content p {
    margin-bottom: 1rem;
  }
  .terms-conditions__content ul, .terms-conditions__content ol {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }
  .terms-conditions__content li {
    margin-bottom: 0.5rem;
  }
  .terms-conditions__content a {
    color: #007bff;
    text-decoration: none;
    font-weight: bold;
  }
  .terms-conditions__content a:hover {
    text-decoration: underline;
  }
  @media screen and (max-width: 768px) {
    .terms-conditions {
      padding: 2rem 0;
    }
    .terms-conditions__container {
      padding: 0 1rem;
    }
    .terms-conditions__title {
      font-size: 2rem;
    }
    .terms-conditions__content {
      padding: 1.5rem;
    }
  }
  @media screen and (max-width: 480px) {
    .terms-conditions__title {
      font-size: 1.8rem;
    }
    .terms-conditions__content {
      padding: 1rem;
    }
  }
  {% endstylesheet %}
</section>

