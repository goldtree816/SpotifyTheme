  {% stylesheet %}
  .footer {
    background: #5c6e87;
    color: #fff;
    font-size: 1rem;
    margin-top: 2rem;
  }
  .footer__main {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1.5rem 1rem 1.5rem;
    gap: 1.5rem;
  }
  .footer__col {
    flex: 1 1 200px;
    min-width: 180px;
    max-width: 280px;
  }
  .footer__heading {
    font-size: 1.1rem;
    font-weight: bold;
    margin-bottom: 0.8rem;
    letter-spacing: 0.5px;
  }
  .footer__desc {
    font-size: 0.95rem;
    opacity: 0.85;
    margin-bottom: 1rem;
    line-height: 1.5;
  }
  .footer__social {
    display: flex;
    gap: 0.4rem;
    flex-wrap: wrap;
  }
  .footer__social-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    color: #fff;
    text-decoration: none;
    transition: all 0.2s ease;
    font-size: 0.9rem;
  }
  .footer__social-link:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-1px);
    color: #fff;
  }
  .footer__list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }
  .footer__list a {
    color: #fff;
    text-decoration: none;
    opacity: 0.9;
    transition: opacity 0.2s;
    font-size: 0.95rem;
  }
  .footer__list a:hover {
    opacity: 1;
    text-decoration: underline;
  }
  .footer__contact-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
    font-size: 0.95rem;
  }
  .footer__icon {
    margin-right: 0.4rem;
    font-size: 1em;
    vertical-align: middle;
  }
  .footer__payment-methods {
    background: #4a5a6a;
    padding: 0.8rem 0;
    text-align: center;
    border-top: 1px solid rgba(255,255,255,0.1);
  }
  .footer__payment-label {
    display: block;
    font-size: 0.85rem;
    opacity: 0.8;
    margin-bottom: 0.4rem;
    font-weight: 500;
  }
  .footer__payment-icons {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.6rem;
    flex-wrap: wrap;
  }
  .footer__payment-icons i {
    font-size: 1.4rem;
    color: #fff;
    opacity: 0.9;
    transition: opacity 0.2s, transform 0.2s;
  }
  .footer__payment-icons i:hover {
    opacity: 1;
    transform: scale(1.05);
  }
  .footer__copyright {
    background: #4a5a6a;
    text-align: center;
    padding: 0.8rem 0;
    font-size: 0.95rem;
    opacity: 0.95;
    letter-spacing: 0.2px;
    border-top: 1px solid rgba(255,255,255,0.1);
  }
  .footer__policy-link {
    color: #fff;
    opacity: 0.85;
    text-decoration: none;
    margin: 0 0.25rem;
    font-size: 0.95rem;
    transition: opacity 0.2s;
  }
  .footer__policy-link:hover {
    opacity: 1;
    text-decoration: underline;
  }
  @media screen and (max-width: 900px) {
    .footer__main {
      flex-direction: column;
      align-items: center;
      gap: 1.5rem;
      padding: 1.5rem 1rem 1rem 1rem;
    }
    .footer__col {
      max-width: 100%;
      width: 100%;
      text-align: center;
    }
    .footer__social {
      justify-content: center;
    }
    .footer__payment-icons {
      gap: 0.5rem;
    }
    .footer__payment-icons i {
      font-size: 1.2rem;
    }
  }
  @media screen and (max-width: 480px) {
    .footer__main {
      padding: 1rem 0.5rem 0.5rem 0.5rem;
      gap: 1rem;
    }
    .footer__social {
      gap: 0.3rem;
    }
    .footer__social-link {
      width: 26px;
      height: 26px;
      font-size: 0.8rem;
    }
    .footer__payment-methods {
      padding: 0.6rem 0;
    }
    .footer__payment-icons {
      gap: 0.4rem;
    }
    .footer__payment-icons i {
      font-size: 1rem;
    }
    .footer__copyright {
      padding: 0.6rem 0;
      font-size: 0.9rem;
    }
  }
  {% endstylesheet %}

