<!-- Font Awesome CDN for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
<link rel="stylesheet" href="{{ 'footer.css' | asset_url }}">

<footer class="footer">
  <div class="footer__content">
    <!-- Company Info Section -->
    <div class="footer__section">
      <div class="footer__branding">
        {% if section.settings.logo != blank %}
          <img src="{{ section.settings.logo | image_url: width: 200 }}" alt="{{ section.settings.brand_name | default: 'Aura Wear' }} logo" class="footer__logo" />
        {% else %}
          <img src="{{ 'logo.png' | asset_url }}" alt="{{ section.settings.brand_name | default: 'Aura Wear' }} logo" class="footer__logo" />
        {% endif %}
        <h3 class="footer__brand-name">{{ section.settings.brand_name | default: 'Aura Wear' }}</h3>
      </div>
      {% if section.settings.tagline != blank %}
        <p class="footer__tagline">{{ section.settings.tagline }}</p>
      {% else %}
        <p class="footer__tagline">Let Your Aura Flow Freely</p>
      {% endif %}
      {% if section.settings.description != blank %}
        <p class="footer__description">{{ section.settings.description }}</p>
      {% else %}
        <p class="footer__description">Designed for movement, made with intention. Aura Wear brings harmony between comfort and confidence.</p>
      {% endif %}
      
      <!-- Social Media Links -->
      <div class="footer__social">
        <a href="#" class="footer__social-link" aria-label="Follow us on Instagram">
          <i class="fab fa-instagram"></i>
        </a>
        <a href="#" class="footer__social-link" aria-label="Follow us on Facebook">
          <i class="fab fa-facebook"></i>
        </a>
        <a href="#" class="footer__social-link" aria-label="Follow us on Twitter">
          <i class="fab fa-twitter"></i>
        </a>
        <a href="#" class="footer__social-link" aria-label="Follow us on Pinterest">
          <i class="fab fa-pinterest"></i>
        </a>
        <a href="#" class="footer__social-link" aria-label="Follow us on TikTok">
          <i class="fab fa-tiktok"></i>
        </a>
      </div>
    </div>

    <!-- Quick Links Section -->
    <div class="footer__section">
      <h4 class="footer__section-title">Shop</h4>
      <ul class="footer__links">
        <li><a href="/collections/all" class="footer__link">All Products</a></li>
        <li><a href="/collections/men" class="footer__link">Men's Collection</a></li>
        <li><a href="/collections/women" class="footer__link">Women's Collection</a></li>
        <li><a href="/collections/accessories" class="footer__link">Accessories</a></li>
        <li><a href="/collections/new-arrivals" class="footer__link">New Arrivals</a></li>
        <li><a href="/collections/sale" class="footer__link">Sale</a></li>
      </ul>
    </div>

    <!-- Customer Service Section -->
    <div class="footer__section">
      <h4 class="footer__section-title">Customer Service</h4>
      <ul class="footer__links">
        <li><a href="/pages/contact" class="footer__link">Contact Us</a></li>
        <li><a href="/pages/returns" class="footer__link">Returns & Exchanges</a></li>
        <li><a href="/pages/size-guide" class="footer__link">Size Guide</a></li>
      </ul>
    </div>

    <!-- Company Section -->
    <div class="footer__section">
      <h4 class="footer__section-title">Company</h4>
      <ul class="footer__links">
        <li><a href="/pages/about" class="footer__link">About Us</a></li>
        <li><a href="/pages/our-story" class="footer__link">Our Story</a></li>
                <li><a href="/pages/faq" class="footer__link">FAQ</a></li>

      </ul>
    </div>

    <!-- Newsletter Section -->
    <div class="footer__section footer__section--newsletter">
      <h4 class="footer__section-title">Stay Connected</h4>
      <p class="footer__newsletter-text">Subscribe to get updates on new arrivals, exclusive offers, and styling tips.</p>
      
      {% form 'customer' %}
        <div class="footer__newsletter-input-group">
          <input 
            type="email" 
            name="contact[email]" 
            placeholder="Enter your email" 
            class="footer__newsletter-input" 
            required
          />
          <input type="hidden" name="contact[tags]" value="newsletter" />
          <button type="submit" class="footer__newsletter-btn">
            <i class="fas fa-arrow-right"></i>
          </button>
        </div>

        {% if form.posted_successfully? %}
          <p class="footer__success-message">Thanks for subscribing!</p>
        {% endif %}

        {% if form.errors %}
          <p class="footer__error-message">Please enter a valid email.</p>
        {% endif %}
      {% endform %}
      
      <div class="footer__newsletter-note">
        <i class="fas fa-shield-alt"></i>
        <span>We respect your privacy. Unsubscribe at any time.</span>
      </div>
    </div>
  </div>

  <!-- Bottom Footer -->
  <div class="footer__bottom">
    <div class="footer__bottom-content">
      <div class="footer__legal">
        <p class="footer__copyright">&copy; {{ 'now' | date: '%Y' }} {{ section.settings.brand_name | default: 'Aura Wear' }}. All rights reserved.</p>
        <div class="footer__legal-links">
          <a href="/pages/privacy-policy" class="footer__legal-link">Privacy Policy</a>
          <a href="/pages/terms-of-service" class="footer__legal-link">Terms of Service</a>
          <a href="/pages/cookie-policy" class="footer__legal-link">Cookie Policy</a>
        </div>
      </div>
      
      <div class="footer__payment-methods">
        <span class="footer__payment-label">We Accept:</span>
        <div class="footer__payment-icons">
          <i class="fab fa-cc-visa"></i>
          <i class="fab fa-cc-mastercard"></i>
          <i class="fab fa-cc-amex"></i>
          <i class="fab fa-cc-paypal"></i>
          <i class="fab fa-apple-pay"></i>
        </div>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Footer Logo"
    },
    {
      "type": "text",
      "id": "brand_name",
      "label": "Brand Name",
      "default": "Aura Wear"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "Let Your Aura Flow Freely"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Designed for movement, made with intention. Aura Wear brings harmony between comfort and confidence."
    }
  ]
}
{% endschema %} 