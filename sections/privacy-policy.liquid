<section class="privacy-policy">
  <div class="privacy-policy__container">
    <h1 class="privacy-policy__title">{{ section.settings.heading }}</h1>
    <div class="privacy-policy__content">
      {{ section.settings.content }}
    </div>
  </div>

  {% stylesheet %}
  .privacy-policy {
    background: #ffffff;
    color: #333333;
    padding: 3rem 0;
    min-height: 100vh;
  }
  .privacy-policy__container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }
  .privacy-policy__title {
    font-size: 2.5rem;
    font-weight: bold;
    color: #333333;
    margin-bottom: 2rem;
    text-align: center;
  }
  .privacy-policy__content {
    background: #ffffff;
    border: 1px solid #e1e5e9;
    border-radius: 12px;
    padding: 2rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    line-height: 1.7;
    color: #666666;
  }
  .privacy-policy__content h2 {
    color: #333333;
    font-size: 1.5rem;
    font-weight: bold;
    margin: 2rem 0 1rem 0;
  }
  .privacy-policy__content h2:first-child {
    margin-top: 0;
  }
  .privacy-policy__content h3 {
    color: #333333;
    font-size: 1.2rem;
    font-weight: bold;
    margin: 1.5rem 0 0.75rem 0;
  }
  .privacy-policy__content p {
    margin-bottom: 1rem;
  }
  .privacy-policy__content ul, .privacy-policy__content ol {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }
  .privacy-policy__content li {
    margin-bottom: 0.5rem;
  }
  .privacy-policy__content a {
    color: #007bff;
    text-decoration: none;
    font-weight: bold;
  }
  .privacy-policy__content a:hover {
    text-decoration: underline;
  }
  @media screen and (max-width: 768px) {
    .privacy-policy {
      padding: 2rem 0;
    }
    .privacy-policy__container {
      padding: 0 1rem;
    }
    .privacy-policy__title {
      font-size: 2rem;
    }
    .privacy-policy__content {
      padding: 1.5rem;
    }
  }
  @media screen and (max-width: 480px) {
    .privacy-policy__title {
      font-size: 1.8rem;
    }
    .privacy-policy__content {
      padding: 1rem;
    }
  }
  {% endstylesheet %}
</section>

