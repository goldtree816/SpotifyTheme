<div class="men-shoes-gallery">
  <h2 class="men-shoes-heading">{{ section.settings.heading }}</h2>
  <div class="men-shoes-gallery-wrapper">
    <div class="men-shoes-grid">
      {% assign featured_section = sections['featured-men-shoes'] %}
      {% if featured_section and featured_section.blocks.size > 0 %}
        {% for block in featured_section.blocks limit:15 %}
          <div class="men-shoe-card">
            {% if block.settings.image != blank %}
              <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.title }}" class="men-shoe-img">
            {% endif %}
            <div class="men-shoe-info">
              <div class="men-shoe-title">{{ block.settings.title }}</div>
              <div class="men-shoe-desc">{{ block.settings.desc }}</div>
            </div>
          </div>
        {% endfor %}
      {% else %}
        <p>No featured men's shoes found. Please add them in the Featured Men Shoes section.</p>
      {% endif %}
    </div>
  </div>
</div>

<style>
.men-shoes-gallery { padding: 48px 0 32px 0; background: #fff; max-width: 100%; }
.men-shoes-heading { text-align: center; margin-bottom: 32px; font-size: 2rem; font-weight: bold; }
.men-shoes-gallery-wrapper { max-width: 1120px; margin: 0 auto; }
.men-shoes-grid { display: flex; flex-wrap: wrap; gap: 32px; max-width: 1120px; margin: 0 auto; justify-content: flex-start; }
.men-shoe-card { width: 220px; background: #f7f7f7; border-radius: 8px; overflow: hidden; display: flex; flex-direction: column; align-items: center; box-shadow: 0 2px 8px rgba(0,0,0,0.04); margin-bottom: 24px; }
.men-shoe-img { width: 100%; height: 160px; object-fit: contain; background: #fff; display: flex; align-items: center; justify-content: center; }
.men-shoe-info { padding: 16px; text-align: left; width: 100%; }
.men-shoe-title { font-size: 1rem; margin-bottom: 8px; font-weight: bold; text-align: center; }
.men-shoe-desc { font-size: 0.95rem; color: #555; text-align: center; }
</style>

{% schema %}
{
  "name": "Men Shoes Gallery",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Men's Shoes Gallery"
    }
  ],
  "presets": [
    {
      "name": "Men Shoes Gallery"
    }
  ]
}
{% endschema %} 