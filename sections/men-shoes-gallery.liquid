<div class="men-shoes-gallery">
  <h2 class="men-shoes-heading">{{ section.settings.heading }}</h2>
  {% if section.settings.subheading != blank %}
    <div class="men-shoes-subheading">{{ section.settings.subheading }}</div>
  {% endif %}
  <div class="men-shoes-gallery-wrapper">
    <div class="men-shoes-grid">
      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
          {% assign product = all_products[block.settings.product] %}
          <div class="men-shoe-card" {{ block.shopify_attributes }}>
            {% if product and product.featured_image %}
              <img src="{{ product.featured_image | img_url: '400x' }}" alt="{{ product.title }}" class="men-shoe-img" loading="lazy">
            {% endif %}
            <div class="men-shoe-info">
              <div class="men-shoe-title">{{ product.title }}</div>
              <div class="men-shoe-price">{{ product.price | money }}</div>
              <div class="men-shoe-desc">{{ product.description | strip_html | truncate: 120 }}</div>
              <a href="/products/{{ product.handle }}" class="men-shoe-link">Shop Now</a>
            </div>
          </div>
        {% endfor %}
      {% else %}
        <div class="men-shoes-empty">No products selected. Click "Add Product Card" to feature products here.</div>
      {% endif %}
    </div>
  </div>
</div>

<style>
.men-shoes-gallery { padding: 48px 0 32px 0; background: #fff; max-width: 100%; }
.men-shoes-heading { text-align: center; margin-bottom: 12px; font-size: 2rem; font-weight: bold; }
.men-shoes-subheading { text-align: center; margin-bottom: 32px; font-size: 1.1rem; color: #666; }
.men-shoes-gallery-wrapper { max-width: 1200px; margin: 0 auto; padding: 0 20px; }
.men-shoes-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); gap: 24px; justify-items: center; }
.men-shoe-card { width: 100%; max-width: 280px; background: #f7f7f7; border-radius: 12px; overflow: hidden; display: flex; flex-direction: column; box-shadow: 0 2px 8px rgba(0,0,0,0.04); transition: transform 0.2s, box-shadow 0.2s; }
.men-shoe-card:hover { transform: translateY(-2px); box-shadow: 0 4px 16px rgba(0,0,0,0.1); }
.men-shoe-img { width: 100%; height: 200px; object-fit: contain; background: #fff; display: flex; align-items: center; justify-content: center; }
.men-shoe-info { padding: 16px; text-align: center; }
.men-shoe-title { font-size: 1.1rem; margin-bottom: 8px; font-weight: bold; color: #333; }
.men-shoe-price { font-size: 1.2rem; font-weight: bold; color: #333; margin-bottom: 8px; }
.men-shoe-desc { font-size: 0.9rem; color: #666; margin-bottom: 12px; line-height: 1.4; }
.men-shoe-link { color: #fff; background: #111; border: none; border-radius: 6px; padding: 10px 20px; text-decoration: none; font-size: 0.9rem; display: inline-block; text-align: center; transition: background 0.2s; }
.men-shoe-link:hover { background: #0071e3; }
.men-shoes-empty { text-align: center; color: #999; font-size: 1.1rem; padding: 40px 0; }

@media (max-width: 768px) {
  .men-shoes-grid { grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 16px; }
  .men-shoe-card { max-width: 240px; }
  .men-shoe-img { height: 160px; }
}
</style>

{% schema %}
{
  "name": "Men Shoes Gallery",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Men's Shoes Collection"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Browse our featured men's products."
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product Card",
      "limit": 10,
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Men Shoes Gallery",
      "blocks": []
    }
  ]
}
{% endschema %} 