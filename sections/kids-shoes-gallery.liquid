<div class="kids-shoes-gallery">
  <h2 class="kids-shoes-heading">{{ section.settings.heading }}</h2>
  <div class="kids-shoes-gallery-wrapper">
    <div class="kids-shoes-grid">
      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
          <div class="kids-shoe-card" {{ block.shopify_attributes }}>
            {% if block.settings.image != blank %}
              <img src="{{ block.settings.image | image_url: width: 400 }}" alt="{{ block.settings.title }}" class="kids-shoe-img" loading="lazy">
            {% else %}
              {% assign default_images = "nb550.webp,menshoeNB9060.webp,menshoeSAMBA.avif,menshoeOZWEEGO.avif,adidas-samba-sneakers-amy4.jpg,jordan.jpg,nb550.jpg,menshoeGEL1130.jpg,menshoeVEJA.webp,menshoeZOOMVOMERO.webp" | split: "," %}
              <img src="{{ default_images[forloop.index0] | asset_url }}" alt="{{ block.settings.title | default: 'Shoe' }}" class="kids-shoe-img" loading="lazy">
            {% endif %}
            <div class="kids-shoe-info">
              <div class="kids-shoe-title">{{ block.settings.title | default: 'Shoe ' | append: forloop.index }}</div>
              <div class="kids-shoe-price">${{ block.settings.price | default: '80' }}</div>
              <div class="kids-shoe-desc">{{ block.settings.desc | default: 'Premium quality shoe' }}</div>
              {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}" class="kids-shoe-link">Shop Now</a>
              {% else %}
                <a href="/pages/shoe-description?shoe={{ forloop.index0 }}" class="kids-shoe-link">Shop Now</a>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      {% else %}
        {% comment %} Default 10 containers when no blocks exist {% endcomment %}
        {% assign default_titles = "NB 550 Kids,NB 9060 Kids,Adidas Samba Kids,Air Jordan Kids,NB 550 Pro Kids,GEL-1130 Kids,VEJA Kids,Zoom Vomero Kids,OZWEEGO Kids,NB 550 Elite Kids" | split: "," %}
        {% assign default_prices = "80,90,85,95,88,92,87,93,89,91" | split: "," %}
        {% assign default_descs = "Heritage design for kids,Classic lifestyle for children,Iconic street style kids,Legendary basketball for youth,Advanced comfort for kids,Premium running for children,Ethical fashion for kids,Performance running for youth,Comfortable daily wear for kids,Elite comfort for children" | split: "," %}
        {% assign default_images = "nb550.webp,menshoeNB9060.webp,menshoeSAMBA.avif,menshoeOZWEEGO.avif,adidas-samba-sneakers-amy4.jpg,jordan.jpg,nb550.jpg,menshoeGEL1130.jpg,menshoeVEJA.webp,menshoeZOOMVOMERO.webp" | split: "," %}
        {% for i in (0..9) %}
          <div class="kids-shoe-card">
            <img src="{{ default_images[i] | asset_url }}" alt="{{ default_titles[i] }}" class="kids-shoe-img" loading="lazy">
            <div class="kids-shoe-info">
              <div class="kids-shoe-title">{{ default_titles[i] }}</div>
              <div class="kids-shoe-price">${{ default_prices[i] }}</div>
              <div class="kids-shoe-desc">{{ default_descs[i] }}</div>
              <a href="/pages/shoe-description?shoe={{ i }}" class="kids-shoe-link">Shop Now</a>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</div>

<style>
.kids-shoes-gallery { padding: 48px 0 32px 0; background: #fff; max-width: 100%; }
.kids-shoes-heading { text-align: center; margin-bottom: 32px; font-size: 2rem; font-weight: bold; }
.kids-shoes-gallery-wrapper { max-width: 1200px; margin: 0 auto; padding: 0 20px; }
.kids-shoes-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); gap: 24px; justify-items: center; }
.kids-shoe-card { width: 100%; max-width: 280px; background: #f7f7f7; border-radius: 12px; overflow: hidden; display: flex; flex-direction: column; box-shadow: 0 2px 8px rgba(0,0,0,0.04); transition: transform 0.2s, box-shadow 0.2s; }
.kids-shoe-card:hover { transform: translateY(-2px); box-shadow: 0 4px 16px rgba(0,0,0,0.1); }
.kids-shoe-img { width: 100%; height: 200px; object-fit: contain; background: #fff; display: flex; align-items: center; justify-content: center; }
.kids-shoe-info { padding: 16px; text-align: center; }
.kids-shoe-title { font-size: 1.1rem; margin-bottom: 8px; font-weight: bold; color: #333; }
.kids-shoe-price { font-size: 1.2rem; font-weight: bold; color: #333; margin-bottom: 8px; }
.kids-shoe-desc { font-size: 0.9rem; color: #666; margin-bottom: 12px; line-height: 1.4; }
.kids-shoe-link { color: #fff; background: #111; border: none; border-radius: 6px; padding: 10px 20px; text-decoration: none; font-size: 0.9rem; display: inline-block; text-align: center; transition: background 0.2s; }
.kids-shoe-link:hover { background: #0071e3; }

@media (max-width: 768px) {
  .kids-shoes-grid { grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 16px; }
  .kids-shoe-card { max-width: 240px; }
  .kids-shoe-img { height: 160px; }
}
</style>

