// ---------------------------------------------------------------
document.addEventListener('DOMContentLoaded', function() {
  const searchForm = document.querySelector('.search-form');
  const categorySelect = document.querySelector('.category-select');

  if (searchForm) {
    searchForm.addEventListener('submit', function(e) {
      if (categorySelect) {
        e.preventDefault();
        const searchQuery = document.querySelector('.search-input').value.trim();
        const selectedOption = categorySelect.options[categorySelect.selectedIndex];
        const collection = selectedOption.getAttribute('data-collection');

        let searchUrl = '/search?';

        // Add search query
        if (searchQuery) {
          searchUrl += `q=${encodeURIComponent(searchQuery)}`;
        }

        // Add product type
        searchUrl += '&type=product';

        // Add collection filter if selected
        if (collection) {
          searchUrl += `&collection=${collection}`;
        }

        // Redirect to search results
        window.location.href = searchUrl;
      }
      // If no categorySelect, let the form submit normally
    });
  }

  // Update placeholder based on category selection
  if (categorySelect) {
    categorySelect.addEventListener('change', function() {
      const selectedOption = this.options[this.selectedIndex];
      const collection = selectedOption.getAttribute('data-collection');
      const searchInput = document.querySelector('.search-input');

      if (collection) {
        const categoryName = selectedOption.textContent;
        searchInput.placeholder = `Search ${categoryName.toLowerCase()} products...`;
      } else {
        searchInput.placeholder = 'Search products...';
      }
    });
  }

  // Hamburger menu logic
  const hamburger = document.getElementById('navbarHamburger');
  const navbarCenter = document.getElementById('navbarCenter');
  let overlay = document.getElementById('mobile-nav-overlay');
  const mobileMenuClose = document.getElementById('mobileMenuClose');
  if (!overlay) {
    overlay = document.createElement('div');
    overlay.id = 'mobile-nav-overlay';
    overlay.className = 'mobile-nav-overlay';
    document.body.appendChild(overlay);
  }
  function closeMobileNav() {
    navbarCenter.classList.remove('open');
    navbarCenter.setAttribute('aria-hidden', 'true');
    overlay.classList.remove('active');
    hamburger.setAttribute('aria-expanded', 'false');
    document.body.style.overflow = '';
  }
  function openMobileNav() {
    navbarCenter.classList.add('open');
    navbarCenter.setAttribute('aria-hidden', 'false');
    overlay.classList.add('active');
    hamburger.setAttribute('aria-expanded', 'true');
    document.body.style.overflow = 'hidden';
  }
  hamburger.addEventListener('click', function() {
    if (navbarCenter.classList.contains('open')) {
      closeMobileNav();
    } else {
      openMobileNav();
    }
  });
  overlay.addEventListener('click', closeMobileNav);
  // Close nav when clicking a nav link (mobile only)
  navbarCenter.querySelectorAll('a').forEach(function(link) {
    link.addEventListener('click', function() {
      if (window.innerWidth <= 900) closeMobileNav();
    });
  });
  // Close nav on resize if desktop
  window.addEventListener('resize', function() {
    if (window.innerWidth > 900) {
      closeMobileNav();
    }
  });

  // --- Rotating Top Bar Message ---
  let topBarIndex = 0;
  const topBarMessageEl = document.getElementById('TopBarMessage');
  if (topBarMessageEl && topBarMessages.length > 1) {
    setInterval(function() {
      topBarIndex = (topBarIndex + 1) % topBarMessages.length;
      topBarMessageEl.textContent = topBarMessages[topBarIndex];
    }, 3000);
  }
  if (mobileMenuClose) {
    mobileMenuClose.addEventListener('click', closeMobileNav);
  }
});
</script>

