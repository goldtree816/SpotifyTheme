<div class="top-bar" id="TopBar">
  <span id="TopBarMessage" style="color: #fff;">STANDARD SHIPPING WITH GOLDTREE</span>
</div>

<div class="navbar">
  <div class="navbar-left">
    {% if section.settings.logo != blank %}
      <a href="/">
        <img src="{{ section.settings.logo | image_url: width: 120 }}" alt="Logo" class="header-logo">
      </a>
    {% else %}
      <a href="/">
        <img src="{{ 'logo.png' | asset_url }}" alt="Logo" class="header-logo">
      </a>
    {% endif %}
  </div>
  <div class="navbar-center">
    <nav>
      <a href="/pages/shoes">MEN</a>
      <a href="#">WOMEN</a>
      <a href="#">KIDS</a>
      <a href="#">SALE</a>
      <a href="#">NEW & TRENDING</a>
    </nav>
  </div>
  <div class="navbar-right">
    <div class="navbar-actions">
      <form class="search-form">
        <input type="text" placeholder="Search">
        <button type="submit" aria-label="Search">
          <!-- Search SVG -->
          <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <circle cx="11" cy="11" r="8"/>
            <line x1="21" y1="21" x2="16.65" y2="16.65"/>
          </svg>
        </button>
      </form>
      <!-- Profile SVG -->
      <a href="#" title="Account">
        <svg width="22" height="22" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <circle cx="12" cy="8" r="4"/>
          <path d="M4 20c0-4 8-4 8-4s8 0 8 4"/>
        </svg>
      </a>
      <!-- Favorite SVG -->
      <a href="#" title="Wishlist">
        <svg width="22" height="22" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path d="M12 21s-6-4.35-9-7.5C-1.5 8.5 2.5 3 7.5 5.5 9.24 6.44 12 9 12 9s2.76-2.56 4.5-3.5C21.5 3 25.5 8.5 21 13.5c-3 3.15-9 7.5-9 7.5z"/>
        </svg>
      </a>
      <!-- Cart SVG -->
      <a href="#" title="Cart">
        <svg width="22" height="22" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <circle cx="9" cy="21" r="1"/>
          <circle cx="20" cy="21" r="1"/>
          <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
        </svg>
      </a>
    </div>
  </div>
</div>

<style>
  .top-bar {
    background: #000;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 64px;
    font-size: 1.2rem;
    font-weight: 600;
    letter-spacing: 1px;
    width: 100%;
    position: relative;
    left: 0;
    top: 0;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  .top-bar span {
    color: #fff;
    transition: color 0.3s;
  }
  .navbar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 16px 32px;
    background: #fff;
  }
  .header-logo {
    height: 80px;
  }
  .navbar-center {
    display: flex;
    align-items: center;
    justify-content: center;
    flex: 1;
  }
  .navbar-center nav {
    display: flex;
    gap: 24px;
  }
  .navbar-center nav a {
    font-weight: bold;
    color: #111;
    text-decoration: none;
    letter-spacing: 2px;
  }
  .navbar-right {
    display: flex;
    align-items: center;
    gap: 24px;
  }
  .navbar-actions {
    display: flex;
    align-items: center;
    gap: 16px;
    height: 48px;
  }
  .search-form {
    display: flex;
    align-items: center;
    background: #f1f3f4;
    border-radius: 2px;
    padding: 2px 8px;
  }
  .search-form input {
    border: none;
    background: transparent;
    outline: none;
    padding: 4px 8px;
  }
  .search-form button {
    background: none;
    border: none;
    cursor: pointer;
    font-size: 1.2rem;
    display: flex;
    align-items: center;
  }
  .navbar-actions a {
    display: flex;
    align-items: center;
    color: #111;
    text-decoration: none;
    padding: 0 4px;
  }
  .navbar-actions a:hover svg {
    stroke: #0071e3;
  }
  .navbar-actions svg {
    display: block;
  }
</style>

<script>
  // Dynamic messages for the top bar
  document.addEventListener('DOMContentLoaded', function() {
    var messages = [
      "STANDARD SHIPPING WITH GOLDTREE",
      "30 DAY FREE RETURNS",
      "NEW ARRIVALS JUST DROPPED"
    ];
    var i = 0;
    var el = document.getElementById('TopBarMessage');
    setInterval(function() {
      i = (i + 1) % messages.length;
      el.textContent = messages[i];
    }, 4000);
  });
</script>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    }
  ]
}
{% endschema %}