<div class="top-bar" id="TopBar">
  <span id="TopBarMessage" style="color: #fff;">STANDARD SHIPPING WITH GOLDTREE</span>
</div>

<div class="navbar">
  <div class="navbar-left">
    {% if section.settings.logo != blank %}
      <a href="/">
        <img src="{{ section.settings.logo | image_url: width: 120 }}" alt="Logo" class="header-logo">
      </a>
    {% else %}
      <a href="/">
        <img src="{{ 'logo.png' | asset_url }}" alt="Logo" class="header-logo">
      </a>
    {% endif %}
  </div>
  <div class="navbar-center">
    <nav>
      <a href="/collections/male">MEN</a>
      <a href="/collections/female">WOMEN</a>
      <a href="/collections/kids">KIDS</a>
    </nav>
  </div>
  <div class="navbar-right">
    <div class="navbar-actions">
      <form class="search-form" action="/search" method="get">
        <input type="text" name="q" placeholder="Search">
        <button type="submit" aria-label="Search">
          <!-- Search SVG -->
          <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <circle cx="11" cy="11" r="8"/>
            <line x1="21" y1="21" x2="16.65" y2="16.65"/>
          </svg>
        </button>
      </form>
      <!-- Favorite SVG -->
      <a href="/pages/favorites" title="Wishlist">
        <svg width="22" height="22" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path d="M12 21s-6-4.35-9-7.5C-1.5 8.5 2.5 3 7.5 5.5 9.24 6.44 12 9 12 9s2.76-2.56 4.5-3.5C21.5 3 25.5 8.5 21 13.5c-3 3.15-9 7.5-9 7.5z"/>
        </svg>
      </a>
      <!-- Cart SVG -->
      <button id="cart-drawer-open" title="Cart" style="background:none;border:none;position:relative;cursor:pointer;">
        <i class="fa fa-shopping-cart" style="font-size:22px;"></i>
        <span id="cart-count-badge" style="position:absolute;top:-6px;right:-6px;background:#e74c3c;color:#fff;border-radius:50%;padding:2px 6px;font-size:0.8rem;display:none;">0</span>
      </button>
      <!-- Customer Authentication Links -->
      {% if customer %}
        <a href="/account">Account</a>
        <a href="/account/logout">Logout</a>
      {% else %}
        <a href="/account/login">Login</a>
        <a href="/account/register">Sign Up</a>
      {% endif %}
    </div>
  </div>
</div>
<style>
  .top-bar {
    background: #000;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 40px;
    font-size: 1.2rem;
    font-weight: 600;
    letter-spacing: 1px;
    width: 100%;
    position: relative;
    left: 0;
    top: 0;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  .top-bar span {
    color: #fff;
    transition: color 0.3s;
  }
  .navbar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 4px 24px;
    background: #f8f9f9;
    border-radius: 16px;
    box-shadow: 0 2px 16px rgba(0,0,0,0.06);
    margin: 12px auto 0 auto;
    max-width: 1300px;
    position: relative;
    z-index: 10;
    min-height: 56px;
  }
  .header-logo {
    height: 48px;
    transition: transform 0.2s;
  }
  .header-logo:hover {
    transform: scale(1.04) rotate(-2deg);
  }
  .navbar-center {
    display: flex;
    align-items: center;
    justify-content: center;
    flex: 1;
  }
  .navbar-center nav {
    display: flex;
    gap: 32px;
  }
  .navbar-center nav a {
    color: #222;
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    padding: 8px 16px;
    border-radius: 8px;
    transition: all 0.2s ease;
    position: relative;
  }
  .navbar-center nav a:hover {
    background: #e3f2fd;
    color: #1976d2;
    transform: translateY(-1px);
  }
  .navbar-center nav a::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 2px;
    background: #1976d2;
    transition: all 0.3s ease;
    transform: translateX(-50%);
  }
  .navbar-center nav a:hover::after {
    width: 80%;
  }
  .navbar-actions {
    display: flex;
    align-items: center;
    gap: 16px;
  }
  .search-form {
    display: flex;
    align-items: center;
    background: #fff;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    padding: 4px 8px;
    transition: all 0.2s ease;
  }
  .search-form:focus-within {
    border-color: #1976d2;
    box-shadow: 0 0 0 2px rgba(25, 118, 210, 0.1);
  }
  .search-form input {
    border: none;
    outline: none;
    padding: 4px 8px;
    font-size: 0.9rem;
    background: transparent;
    min-width: 120px;
  }
  .search-form button {
    background: none;
    border: none;
    cursor: pointer;
    padding: 4px;
    border-radius: 4px;
    color: #666;
    transition: all 0.2s ease;
  }
  .search-form button:hover {
    background: #e3f2fd;
    color: #1976d2;
  }
  .navbar-actions a {
    display: flex;
    align-items: center;
    color: #222;
    text-decoration: none;
    padding: 0 6px;
    border-radius: 6px;
    transition: background 0.18s, color 0.18s;
  }
  .navbar-actions a:hover, .navbar-actions a:focus {
    background: #e3f2fd;
    color: #1976d2;
  }
  .navbar-actions a:hover svg, .navbar-actions a:focus svg {
    stroke: #1976d2;
  }
  .navbar-actions svg {
    display: block;
    transition: stroke 0.18s;
  }
</style>
{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    }
  ]
}
{% endschema %}

<!-- Cart Drawer Modal -->
<div id="cart-drawer" class="cart-drawer" aria-hidden="true">
  <div id="cart-drawer-overlay" class="cart-drawer__overlay"></div>
  <div class="cart-drawer__content">
    <div class="cart-drawer__header">
      <h2 class="cart-drawer__title">Your Cart</h2>
      <button id="cart-drawer-close" class="cart-drawer__close-btn" aria-label="Close Cart">
        <svg width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>
    <div id="cart-drawer-content" class="cart-drawer__body"></div>
  </div>
</div>

