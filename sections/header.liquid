<div class="top-bar" id="TopBar">
  <span id="TopBarMessage" style="color: #fff;">STANDARD SHIPPING WITH GOLDTREE</span>
</div>

<div class="navbar">
  <div class="navbar-left">
    {% if section.settings.logo != blank %}
      <a href="/">
        <img src="{{ section.settings.logo | image_url: width: 120 }}" alt="Logo" class="header-logo">
      </a>
    {% else %}
      <a href="/">
        <img src="{{ 'logo.png' | asset_url }}" alt="Logo" class="header-logo">
      </a>
    {% endif %}
  </div>
  <div class="navbar-center">
    <nav>
      <a href="/collections/male">MEN</a>
      <a href="/collections/female">WOMEN</a>
      <a href="/collections/kids">KIDS</a>
    </nav>
  </div>
  <div class="navbar-right">
    <div class="navbar-actions">
      <form class="search-form" action="/search" method="get">
        <input type="text" name="q" placeholder="Search">
        <button type="submit" aria-label="Search">
          <!-- Search SVG -->
          <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <circle cx="11" cy="11" r="8"/>
            <line x1="21" y1="21" x2="16.65" y2="16.65"/>
          </svg>
        </button>
      </form>
      <!-- Favorite SVG -->
      <a href="/pages/favorites" title="Wishlist">
        <svg width="22" height="22" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path d="M12 21s-6-4.35-9-7.5C-1.5 8.5 2.5 3 7.5 5.5 9.24 6.44 12 9 12 9s2.76-2.56 4.5-3.5C21.5 3 25.5 8.5 21 13.5c-3 3.15-9 7.5-9 7.5z"/>
        </svg>
      </a>
      <!-- Cart SVG -->
      <a href="/pages/cart" title="Cart">
        <svg width="22" height="22" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <circle cx="9" cy="21" r="1"/>
          <circle cx="20" cy="21" r="1"/>
          <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
        </svg>
      </a>
      <!-- Customer Authentication Links -->
      {% if customer %}
        <a href="/account">Account</a>
        <a href="/account/logout">Logout</a>
      {% else %}
        <a href="/account/login">Login</a>
        <a href="/account/register">Sign Up</a>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .top-bar {
    background: #000;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 40px;
    font-size: 1.2rem;
    font-weight: 600;
    letter-spacing: 1px;
    width: 100%;
    position: relative;
    left: 0;
    top: 0;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  .top-bar span {
    color: #fff;
    transition: color 0.3s;
  }
  .navbar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 4px 24px;
    background: #f8f9f9;
    border-radius: 16px;
    box-shadow: 0 2px 16px rgba(0,0,0,0.06);
    margin: 12px auto 0 auto;
    max-width: 1300px;
    position: relative;
    z-index: 10;
    min-height: 56px;
  }
  .header-logo {
    height: 48px;
    transition: transform 0.2s;
  }
  .header-logo:hover {
    transform: scale(1.04) rotate(-2deg);
  }
  .navbar-center {
    display: flex;
    align-items: center;
    justify-content: center;
    flex: 1;
  }
  .navbar-center nav {
    display: flex;
    gap: 32px;
  }
  .navbar-center nav a {
    font-weight: bold;
    color: #222;
    text-decoration: none;
    letter-spacing: 2px;
    font-size: 1.08rem;
    padding: 8px 18px;
    border-radius: 8px;
    transition: color 0.18s;
    position: relative;
    overflow: hidden;
  }
  .navbar-center nav a::after {
    content: '';
    display: block;
    position: absolute;
    left: 18px;
    right: 18px;
    bottom: 6px;
    height: 2px;
    background: #111;
    border-radius: 2px;
    transform: scaleX(0);
    transition: transform 0.22s cubic-bezier(.4,0,.2,1);
  }
  .navbar-center nav a:hover, .navbar-center nav a:focus {
    color: #111;
  }
  .navbar-center nav a:hover::after, .navbar-center nav a:focus::after {
    transform: scaleX(1);
  }
  .navbar-right {
    display: flex;
    align-items: center;
    gap: 28px;
  }
  .navbar-actions {
    display: flex;
    align-items: center;
    gap: 18px;
    height: 48px;
  }
  .search-form {
    display: flex;
    align-items: center;
    background: #f1f3f4;
    border-radius: 24px;
    padding: 2px 12px;
    box-shadow: 0 1px 4px rgba(0,0,0,0.03);
    border: 1px solid #e3e6ea;
    transition: box-shadow 0.18s, border 0.18s;
  }
  .search-form:focus-within {
    box-shadow: 0 2px 8px rgba(0,113,227,0.10);
    border: 1px solid #b3d4fc;
  }
  .search-form input {
    border: none;
    background: transparent;
    outline: none;
    padding: 6px 8px;
    font-size: 1rem;
    min-width: 120px;
  }
  .search-form button {
    background: none;
    border: none;
    cursor: pointer;
    font-size: 1.2rem;
    display: flex;
    align-items: center;
    color: #222;
    padding: 4px;
    border-radius: 50%;
    transition: background 0.18s;
  }
  .search-form button:hover {
    background: #e6f7ef;
  }
  .navbar-actions a {
    display: flex;
    align-items: center;
    color: #222;
    text-decoration: none;
    padding: 0 6px;
    border-radius: 6px;
    transition: background 0.18s, color 0.18s;
  }
  .navbar-actions a:hover, .navbar-actions a:focus {
    background: #e6f7ef;
    color: #3bb77e;
  }
  .navbar-actions a:hover svg, .navbar-actions a:focus svg {
    stroke: #3bb77e;
  }
  .navbar-actions svg {
    display: block;
    transition: stroke 0.18s;
  }
</style>

<script>
  // Dynamic messages for the top bar
  document.addEventListener('DOMContentLoaded', function() {
    var messages = [
      "STANDARD SHIPPING WITH GOLDTREE",
      "30 DAY FREE RETURNS",
      "NEW ARRIVALS JUST DROPPED"
    ];
    var i = 0;
    var el = document.getElementById('TopBarMessage');
    setInterval(function() {
      i = (i + 1) % messages.length;
      el.textContent = messages[i];
    }, 4000);
  });
</script>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    }
  ]
}
{% endschema %}