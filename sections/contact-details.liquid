{% comment %}
  Contact Details Section: editable address, phone, email, and map for the contact page.
{% endcomment %}
<div class="contact-details">
  <div class="contact-detail-item">
    <strong>{{ 'contact.address_label' | t }}</strong><br>
    {{ section.settings.address | escape | newline_to_br }}
  </div>
  <div class="contact-detail-item">
    <strong>{{ 'contact.phone_label' | t }}</strong><br>
    <a href="tel:{{ section.settings.phone | escape }}" class="contact-link">{{ section.settings.phone | escape }}</a>
  </div>
  <div class="contact-detail-item">
    <strong>{{ 'contact.email_label' | t }}</strong><br>
    <a href="mailto:{{ section.settings.email | escape }}" class="contact-link">{{ section.settings.email | escape }}</a>
  </div>
  {% if section.settings.map_url != blank %}
  <div class="contact-detail-item contact-map">
    <iframe src="{{ section.settings.map_url | escape }}" width="100%" height="180" style="border:0; border-radius:0.5rem;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
  </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Contact Details",
  "settings": [
    {
      "type": "textarea",
      "id": "address",
      "label": "Address",
      "default": "123 Main Street, New York, NY 10001"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone",
      "default": "+1 (234) 567-890"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "info@example.com"
    },
    {
      "type": "text",
      "id": "map_url",
      "label": "Google Maps Embed URL",
      "default": "https://www.google.com/maps?q=123+Main+Street,+New+York,+NY+10001&output=embed"
    }
  ],
  "presets": [
    {
      "name": "Contact Details"
    }
  ]
}
{% endschema %} 