<section class="error-page">
  <div class="error-wrapper">
    <h1>{{ section.settings.title }}</h1>
    <p>{{ section.settings.message }}</p>
    <a href="{{ routes.root_url }}" class="error-btn">
      {{ section.settings.button_label }}
    </a>
  </div>
</section>

<style>
.error-page {
  padding: 80px 20px;
  text-align: center;
}
.error-wrapper {
  max-width: 700px;
  margin: 0 auto;
}
.error-wrapper h1 {
  font-size: 3rem;
  margin-bottom: 1rem;
}
.error-wrapper p {
  font-size: 1.2rem;
  color: #666;
  margin-bottom: 2rem;
}
.error-btn {
  display: inline-block;
  padding: 12px 24px;
  background: #000;
  color: #fff;
  text-decoration: none;
  border-radius: 4px;
}
.error-btn:hover {
  background: #222;
}
</style>

{% schema %}
{
  "name": "404 Error Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Page Title",
      "default": "404 - Page Not Found"
    },
    {
      "type": "textarea",
      "id": "message",
      "label": "Description",
      "default": "Sorry, the page you're looking for doesn't exist or has been moved."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Return Home"
    }
  ],
  "presets": [
    {
      "name": "Default 404 Layout"
    }
  ]
}
{% endschema %}
