{% assign default_titles = "Shoe 1,Shoe 2,Shoe 3,Shoe 4,Shoe 5,Shoe 6" | split: "," %}
{% assign default_prices = "100,120,110,130,140,150" | split: "," %}
{% assign default_images = "menshoeGEL1130.jpg,menshoeNB9060.webp,menshoeOZWEEGO.avif,menshoeSAMBA.avif,menshoeVEJA.webp,menshoeZOOMVOMERO.webp" | split: "," %}

<div class="featured-men-shoes">
  <h2>{{ section.settings.heading }}</h2>
  <div class="featured-men-shoes-wrapper">
    <div class="featured-shoes-grid featured-men-slider" id="featured-men-slider">
      {% if section.blocks.size > 0 %}
        {% for i in (0..5) %}
          {% assign block = section.blocks[i] %}
          <div class="featured-shoe big">
            {% if block or request.design_mode %}
              {% if block.settings.image %}
                <img 
                  src="{{ block.settings.image | image_url: width: 600 }}" 
                  alt="{{ block.settings.title | default: default_titles[i] | escape }}" 
                  class="featured-shoe-img"
                  loading="lazy"
                  width="600"
                  height="180"
                >
              {% else %}
                <img src="{{ default_images[i] | asset_url }}" alt="{{ block.settings.title | default: default_titles[i] }}" class="featured-shoe-img" loading="lazy" width="600" height="180">
              {% endif %}
              <div class="featured-shoe-title center">{{ block.settings.title | default: default_titles[i] }}</div>
              <div class="featured-shoe-price center">${{ block.settings.price | default: default_prices[i] }}</div>
              <a href="{{ block.settings.link | default: '#' }}" class="featured-shoe-link">Shop Now</a>
            {% else %}
              <img src="{{ default_images[i] | asset_url }}" alt="{{ default_titles[i] }}" class="featured-shoe-img" loading="lazy" width="600" height="180">
              <div class="featured-shoe-title center">{{ default_titles[i] }}</div>
              <div class="featured-shoe-price center">${{ default_prices[i] }}</div>
              <a href="#" class="featured-shoe-link">Shop Now</a>
            {% endif %}
          </div>
        {% endfor %}
      {% else %}
        {% for i in (0..5) %}
          <div class="featured-shoe big">
            <img src="{{ default_images[i] | asset_url }}" alt="{{ default_titles[i] }}" class="featured-shoe-img" loading="lazy" width="600" height="180">
            <div class="featured-shoe-title center">{{ default_titles[i] }}</div>
            <div class="featured-shoe-price center">${{ default_prices[i] }}</div>
            <a href="#" class="featured-shoe-link">Shop Now</a>
          </div>
        {% endfor %}
      {% endif %}
    </div>
    <button class="slider-arrow left" onclick="slideTopPicks('featured-men-slider', -1)">&#8592;</button>
    <button class="slider-arrow right" onclick="slideTopPicks('featured-men-slider', 1)">&#8594;</button>
  </div>
</div>

<style>
.featured-men-shoes { 
  padding: 32px 0; 
  background: #fff; 
}
.featured-men-shoes-wrapper { 
  position: relative; 
  max-width: 1120px; 
  margin: 0 auto; 
  overflow: hidden; 
}
.featured-shoes-grid { 
  display: flex; 
  gap: 40px; 
  transition: transform 0.3s; 
  padding: 0 20px;
}
.featured-shoe.big { 
  width: 250px; 
  min-width: 250px; 
  background: #f7f7f7; 
  border-radius: 12px; 
  overflow: hidden; 
  display: flex; 
  flex-direction: column; 
  align-items: center; 
  box-shadow: 0 2px 8px rgba(0,0,0,0.04); 
}
.featured-shoe-img { 
  width: 100%; 
  height: 180px; 
  object-fit: contain; 
  background: #fff; 
}
.placeholder-image {
  width: 100%;
  height: 180px;
  background: #f7f7f7;
  display: flex;
  align-items: center;
  justify-content: center;
}
.featured-shoe-title.center, 
.featured-shoe-price.center { 
  text-align: center; 
  width: 100%; 
  margin: 0 auto; 
  padding: 0 10px;
}
.featured-shoe-title { 
  font-size: 1.1rem; 
  margin: 12px 0 4px 0; 
  font-weight: bold; 
}
.featured-shoe-price { 
  font-size: 1.1rem; 
  font-weight: bold; 
  margin-bottom: 8px; 
}
.featured-shoe-link { 
  color: #fff; 
  background: #111; 
  border: none; 
  border-radius: 4px; 
  padding: 8px 16px; 
  text-decoration: none; 
  font-size: 1rem; 
  margin-bottom: 12px; 
  display: inline-block; 
  text-align: center; 
  transition: background 0.2s, color 0.2s; 
}
.featured-shoe-link:hover { 
  background: #0071e3; 
  color: #fff; 
}
.slider-arrow { 
  position: absolute; 
  top: 50%; 
  transform: translateY(-50%); 
  background: #fff; 
  border: 1px solid #ccc; 
  border-radius: 50%; 
  width: 36px; 
  height: 36px; 
  font-size: 1.5rem; 
  cursor: pointer; 
  z-index: 2; 
}
.slider-arrow.left { left: 10px; }
.slider-arrow.right { right: 10px; }
.featured-men-shoes > h2 { 
  text-align: center; 
  margin-bottom: 32px; 
  font-size: 2rem; 
  font-weight: bold; 
}

@media (max-width: 1200px) {
  .featured-men-shoes-wrapper {
    max-width: 900px;
  }
}
@media (max-width: 768px) {
  .featured-men-shoes-wrapper {
    max-width: 100%;
    padding: 0 40px;
  }
  .featured-shoes-grid {
    gap: 20px;
    padding: 0;
  }
  .featured-shoe.big {
    width: 200px;
    min-width: 200px;
  }
}
</style>

<script>
function slideTopPicks(id, dir) {
  const slider = document.getElementById(id);
  if (!slider) return;
  
  const itemWidth = 250 + 40; // width + gap
  const visibleItems = Math.floor(slider.parentElement.offsetWidth / itemWidth);
  const totalItems = slider.children.length;
  const maxSlides = Math.max(0, totalItems - visibleItems);
  
  let current = parseInt(slider.dataset.slide) || 0;
  let next = current + dir;
  
  next = Math.max(0, Math.min(next, maxSlides));
  slider.style.transform = `translateX(${-next * itemWidth}px)`;
  slider.dataset.slide = next;
}
</script>

