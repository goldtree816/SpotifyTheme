<!-- AD BANNER START -->
<div class="ad-banner-wrapper" style="background-color: #0276d9 !important; padding: 20px !important; display: flex !important; justify-content: center !important; align-items: center !important; width: 100% !important; position: relative !important; z-index: 5 !important; margin: 0 !important; box-sizing: border-box !important;">
  <div class="ad-banner-content">
    <p class="ad-banner-text" style="color: white !important; font-weight: bold !important; font-size: 1.5rem !important; margin: 0 !important; letter-spacing: .1rem !important;">{{ section.settings.text | default: "JOIN GOLDTREE & GET 15% OFF" }}</p>
    <a href="/account/register" class="ad-banner-button" style="background-color: white !important; color: black !important; padding: 15px 25px !important; text-decoration: none !important; font-weight: bold !important;">
      {{- section.settings.button_text | default: "SIGN UP FOR FREE" -}}
      <span class="arrow">&rarr;</span>
    </a>
  </div>
</div>
<!-- AD BANNER END -->

<style>
  .ad-banner-wrapper {
    background-color: #0276d9;
    padding: 20px;
    display: flex !important;
    justify-content: center;
    align-items: center;
    width: 100%;
    position: relative;
    z-index: 5;
    margin: 0;
    box-sizing: border-box;
  }
  .ad-banner-content {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 30px;
  }
  .ad-banner-text {
    color: white;
    font-weight: bold;
    font-size: 1.5rem;
    margin: 0;
    letter-spacing: .1rem;
  }
  .ad-banner-button {
    background-color: white;
    color: black;
    padding: 15px 25px;
    text-decoration: none;
    font-weight: bold;
  }
  .ad-banner-button .arrow {
    margin-left: 10px;
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .ad-banner-content {
      flex-direction: column;
      gap: 15px;
      text-align: center;
    }
    
    .ad-banner-text {
      font-size: 1.2rem;
    }
    
    .ad-banner-button {
      padding: 12px 20px;
    }
  }
  
  @media (max-width: 480px) {
    .ad-banner-wrapper {
      padding: 15px;
    }
    
    .ad-banner-text {
      font-size: 1rem;
    }
    
    .ad-banner-button {
      padding: 10px 16px;
      font-size: 0.9rem;
    }
  }
</style>

{% schema %}
{
  "name": "Ad Banner",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "JOIN OUR GOLDTREE & GET 15% OFF"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SIGN UP FOR FREE"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Ad Banner"
    }
  ]
}
{% endschema %} 