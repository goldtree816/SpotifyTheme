    {
      "type": "text",
      "id": "poster1_heading",
      "label": "Poster 1 Heading"
    },
    {
      "type": "text",
      "id": "poster1_subheading",
      "label": "Poster 1 Subheading"
    },
    {
      "type": "image_picker",
      "id": "poster2_image",
      "label": "Poster 2 Image"
    },
    {
      "type": "text",
      "id": "poster2_heading",
      "label": "Poster 2 Heading"
    },
    {
      "type": "text",
      "id": "poster2_subheading",
      "label": "Poster 2 Subheading"
    },
    {
      "type": "image_picker",
      "id": "poster3_image",
      "label": "Poster 3 Image"
    },
    {
      "type": "text",
      "id": "poster3_heading",
      "label": "Poster 3 Heading"
    },
    {
      "type": "text",
      "id": "poster3_subheading",
      "label": "Poster 3 Subheading"
    }
  ],
  "presets": [
    {
