<div class="featured-women-shoes">
  <h2>{{ section.settings.heading }}</h2>
  <div class="featured-shoes-grid">
    {% for block in section.blocks %}
      <div class="featured-shoe">
        {% if block.settings.image != blank %}
          <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.title }}" class="featured-shoe-img">
        {% endif %}
        <div class="featured-shoe-title">{{ block.settings.title }}</div>
        {% if block.settings.link != blank %}
          <a href="{{ block.settings.link }}" class="featured-shoe-link">Shop Now</a>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

<style>
.featured-women-shoes {
  padding: 32px 0;
  background: #fff;
}
.featured-shoes-grid {
  display: flex;
  gap: 32px;
  justify-content: flex-start;
}
.featured-shoe {
  width: 220px;
  background: #f7f7f7;
  border-radius: 8px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2px 8px rgba(0,0,0,0.04);
  margin-bottom: 24px;
}
.featured-shoe-img {
  width: 100%;
  height: 160px;
  object-fit: contain;
  background: #fff;
}
.featured-shoe-title {
  font-size: 1rem;
  margin: 12px 0 8px 0;
  font-weight: bold;
}
.featured-shoe-link {
  color: #0071e3;
  text-decoration: underline;
  font-size: 0.95rem;
}
</style>

{% schema %}
{
  "name": "Featured Women Shoes",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Women's Shoes"
    }
  ],
  "blocks": [
    {
      "type": "shoe",
      "name": "Featured Shoe",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Shoe Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Shoe Title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "max_blocks": 3,
  "presets": [
    {
      "name": "Featured Women Shoes"
    }
  ]
}
{% endschema %} 