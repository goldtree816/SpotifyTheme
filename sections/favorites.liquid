<div id="favorites-container">
  <div class="favorites-header">
    <h1>My Favorites</h1>
    <p>Your saved products</p>
  </div>
</div>

<script>
async function fetchProduct(handle) {
  try {
  const res = await fetch(`/products/${handle}.js`);
    if (!res.ok) {
      console.error(`Failed to fetch product ${handle}:`, res.status);
      return null;
    }
  return await res.json();
  } catch (error) {
    console.error(`Error fetching product ${handle}:`, error);
    return null;
  }
}

async function renderFavorites() {
  const favs = JSON.parse(localStorage.getItem('favorites') || '[]');
  const cart = JSON.parse(localStorage.getItem('cart') || '[]');
  const container = document.getElementById('favorites-container');
  
  if (!container) {
    console.error('Favorites container not found');
    return;
  }
  
  console.log('Favorites from localStorage:', favs);
  
  if (favs.length === 0) {
    container.innerHTML = `
      <div class="favorites-header">
        <h1>My Favorites</h1>
        <p>Your saved products</p>
      </div>
      <div class="favorites-empty">
        <div class="empty-icon">☆</div>
        <h3>No favorites yet</h3>
        <p>Start adding products to your favorites to see them here!</p>
        <a href="/" class="browse-btn">Browse Products</a>
      </div>
    `;
    return;
  }
  
  let html = `
    <div class="favorites-header">
      <h1>My Favorites</h1>
      <p>Your saved products (${favs.length} items)</p>
    </div>
    <div class="favorites-list">
  `;
  
  let loadedCount = 0;
  
  for (const handle of favs) {
    console.log('Fetching product:', handle);
    const product = await fetchProduct(handle);
    
    if (!product) {
      console.log('Product not found, skipping:', handle);
      continue;
    }
    
    loadedCount++;
    const inCart = cart.includes(product.id);
    
    html += `
      <div class="favorite-card" data-handle="${handle}">
        <div class="favorite-image-container">
          <img src="${product.featured_image}" class="favorite-img" alt="${product.title}" onerror="this.src='data:image/svg+xml;base64,'">
        </div>
      <div class="favorite-info">
        <div class="favorite-title">${product.title}</div>
          <div class="favorite-price">${Shopify.formatMoney ? Shopify.formatMoney(product.price) : `$${(product.price / 100).toFixed(2)}`}</div>
          <div class="favorite-actions">
            <button class="favorite-btn starred" disabled>★ Starred</button>
        <button class="add-to-cart-btn" onclick="addToCart(${product.variants[0].id}, this)" ${inCart ? 'disabled' : ''}>${inCart ? 'In Cart' : 'Add to Cart'}</button>
            <button class="remove-favorite-btn" onclick="removeFavorite('${handle}', this)">Remove</button>
          </div>
        </div>
      </div>
    `;
  }
  
  html += '</div>';
  
  if (loadedCount === 0) {
    html = `
      <div class="favorites-header">
        <h1>My Favorites</h1>
        <p>Your saved products</p>
      </div>
      <div class="favorites-empty">
        <div class="empty-icon">⚠️</div>
        <h3>Unable to load favorites</h3>
        <p>There was an issue loading your favorite products. Please try refreshing the page.</p>
        <button onclick="location.reload()" class="refresh-btn">Refresh Page</button>
      </div>
    `;
  }
  
  container.innerHTML = html;
  console.log(`Loaded ${loadedCount} favorites out of ${favs.length}`);
}
async function addToCart(variantId, btn) {
  btn.disabled = true;
  btn.textContent = 'In Cart';
  try {
  await fetch('/cart/add.js', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ id: variantId, quantity: 1 })
  });
    // Update localStorage cart
  let cart = JSON.parse(localStorage.getItem('cart') || '[]');
  cart.push(variantId);
  localStorage.setItem('cart', JSON.stringify(cart));
  } catch (error) {
    console.error('Error adding to cart:', error);
    btn.disabled = false;
    btn.textContent = 'Add to Cart';
  }
}

function removeFavorite(handle, btn) {
  const favorites = JSON.parse(localStorage.getItem('favorites') || '[]');
  const index = favorites.indexOf(handle);
  
  if (index > -1) {
    favorites.splice(index, 1);
    localStorage.setItem('favorites', JSON.stringify(favorites));
    
    // Remove the card from the DOM
    const card = btn.closest('.favorite-card');
    if (card) {
      card.style.opacity = '0';
      setTimeout(() => {
        card.remove();
        // Re-render if no favorites left
        if (favorites.length === 0) {
          renderFavorites();
        }
      }, 300);
    }
  }
}

document.addEventListener('DOMContentLoaded', renderFavorites);
</script>
