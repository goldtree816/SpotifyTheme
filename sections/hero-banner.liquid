{{ 'hero.css' | asset_url | stylesheet_tag }}

<section class="hero">
  <div class="hero-background"></div>

  <div class="fashion-images">
    {% if section.settings.image1 != blank %}
      <img class="fashion-img" src="{{ section.settings.image1 | image_url: width: 800 }}" alt="{{ section.settings.image1_alt | escape }}" loading="lazy">
    {% else %}
      <img class="fashion-img" src="https://picsum.photos/id/1027/600/800" alt="Look 1" loading="lazy">
    {% endif %}

    {% if section.settings.image2 != blank %}
      <img class="fashion-img" src="{{ section.settings.image2 | image_url: width: 800 }}" alt="{{ section.settings.image2_alt | escape }}" loading="lazy">
    {% else %}
      <img class="fashion-img" src="https://images.unsplash.com/photo-1495385794356-15371f348c31?q=80&w=670&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Look 2" loading="lazy">
    {% endif %}

    {% if section.settings.image3 != blank %}
      <img class="fashion-img" src="{{ section.settings.image3 | image_url: width: 800 }}" alt="{{ section.settings.image3_alt | escape }}" loading="lazy">
    {% else %}
      <img class="fashion-img" src="https://plus.unsplash.com/premium_photo-1695844418754-75d7350de991?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTd8fG1vZGVsJTIwJTIwZmFzfGVufDB8fDB8fHww" alt="Look 3" loading="lazy">
    {% endif %}

    {% if section.settings.image4 != blank %}
      <img class="fashion-img" src="{{ section.settings.image4 | image_url: width: 800 }}" alt="{{ section.settings.image4_alt | escape }}" loading="lazy">
    {% else %}
      <img class="fashion-img" src="https://plus.unsplash.com/premium_photo-1687186953637-78a495aec485?q=80&w=686&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Look 4" loading="lazy">
    {% endif %}
  </div>

  <div class="hero-overlay"></div>

  <div class="hero-content">
    {% if section.settings.subtitle != blank %}
      <p class="hero-subtitle">{{ section.settings.subtitle }}</p>
    {% else %}
      <p class="hero-subtitle">Luxury Fashion</p>
    {% endif %}

    {% if section.settings.title != blank %}
      <h1 class="hero-title">{{ section.settings.title }}</h1>
    {% else %}
      <h1 class="hero-title">Elegance<br>Redefined</h1>
    {% endif %}

    {% if section.settings.description != blank %}
      <p class="hero-description">{{ section.settings.description }}</p>
    {% else %}
      <p class="hero-description">Discover our exclusive collection where timeless sophistication meets contemporary design. Crafted for those who appreciate the finer details in fashion.</p>
    {% endif %}

    <div class="cta-container">
      {% if section.settings.cta_label != blank and section.settings.cta_link != blank %}
        <a href="{{ section.settings.cta_link }}" class="cta-button">{{ section.settings.cta_label }}</a>
      {% else %}
        <a href="/collections/all" class="cta-button">Shop Collection</a>
      {% endif %}
    </div>
  </div>

  <div class="scroll-indicator">
    <p style="font-size: 0.9rem; margin-bottom: 10px;">Discover More</p>
    <div class="scroll-arrow"></div>
  </div>
</section>

{% schema %}
{
  "name": "Hero banner",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Elegance<br>Redefined"
