{% comment %} Customer Register Page {% endcomment %}
{% section 'header' %}
<main class="auth-main">
  <div class="auth-container">
    <h1 class="auth-title">Create Account</h1>

    {% form 'create_customer' %}
      {% if form.errors %}
        <div class="auth-error">{{ form.errors | default_errors }}</div>
      {% endif %}

      <label for="RegisterName">Full Name</label>
      <input type="text" name="customer[first_name]" id="RegisterName" required>

      <label for="RegisterEmail">Email</label>
      <input type="email" name="customer[email]" id="RegisterEmail" required>

      <label for="RegisterPassword">Password</label>
      <input type="password" name="customer[password]" id="RegisterPassword" required>

      <button type="submit" class="auth-btn">Register</button>

      <p class="auth-link">
        <a href="/account/login">Already have an account? Login</a>
      </p>
    {% endform %}
  </div>
</main>
{% section 'footer' %}

<style>
/* Reuse same styles as login */
.auth-main, .auth-container, .auth-title, .auth-btn, .auth-link, .auth-link a, .auth-error {
  /* Same CSS as login page */
}
.auth-container label,
.auth-container input {
  display: block;
  width: 100%;
  margin-top: 1rem;
}
</style>
