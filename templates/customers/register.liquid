{% form 'create_customer' %}
  <div class="auth auth--register">
    <h2 class="auth__title">Create Your Account</h2>
    {% if form.errors %}
      <div class="auth__error">{{ form.errors | default_errors }}</div>
    {% endif %}
    <div class="auth__form">
      <label class="auth__label">Name
        <input type="text" name="customer[first_name]" class="auth__input" required />
      </label>
      <label class="auth__label">Email
        <input type="email" name="customer[email]" class="auth__input" required />
      </label>
      <label class="auth__label">Password
        <input type="password" name="customer[password]" class="auth__input" required />
      </label>
      <button type="submit" class="auth__btn">Sign Up</button>
    </div>
    <p class="auth__switch">Already have an account? <a href="/account/login">Login</a></p>
  </div>
{% endform %} 