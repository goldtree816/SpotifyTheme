    margin-bottom: 0.5rem;
  }
  .similar-product-title {
    font-size: 1rem;
    font-weight: 500;
    color: #1d1d1f;
    margin-bottom: 0.25rem;
    text-decoration: none;
  }
  .similar-product-price {
    font-size: 1.1rem;
    color: #cdaa7d;
    font-weight: 600;
  }
  .option-label {
    font-size: 1rem;
    color: #888;
    margin-bottom: 0.25rem;
  }
  .option-buttons {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }
  .option-btn-label {
    display: flex;
    align-items: center;
  }
  .option-btn-input {
    display: none;
  }
  .option-btn {
    display: inline-block;
    padding: 0.3rem 0.9rem;
    font-size: 0.95rem;
    border-radius: 0.5rem;
    border: 1px solid var(--primary-color);
    background: #fff;
    color: var(--primary-color);
    cursor: pointer;
    transition: background 0.2s, color 0.2s;
  }
  .option-btn-label input:checked + .option-btn {
    background: var(--primary-color);
    color: #fff;
  }
  .product-description {
    color: #444;
    font-size: 1.1rem;
    line-height: 1.7;
    margin-top: 2rem;
  }
  .product-title-row {
    display: flex;
    align-items: center;
    gap: 0.7rem;
  }
  .wishlist-heart-btn {
    background: none;
    border: none;
    cursor: pointer;
    font-size: 1.7rem;
    color: var(--text-dark);
    transition: color 0.2s;
  }
  .wishlist-heart-btn.active .wishlist-heart-icon {
    color: #000;
    content: '\2665';
  }
  .wishlist-heart-icon {
    pointer-events: none;
    font-size: 1.7rem;
    transition: color 0.2s;
    color: var(--text-dark);
  }
</style>
