    flex: 1 1 350px;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    justify-content: center;
  }
  .product-title {
    font-size: 2.2rem;
    font-weight: 500;
    margin: 0;
  }
  .product-category {
    font-size: 1rem;
    color: #888;
    margin-bottom: 0.5rem;
  }
  .product-price {
    font-size: 1.5rem;
    color: var(--primary-color);
    font-weight: 600;
  }
  .product-form {
    margin-top: 2rem;
  }
  .product-option {
    margin-bottom: 1rem;
  }
  .product-add-to-cart {
    background: #131211;
    color: #fff;
    border: none;
    padding: 1rem 2.5rem;
    font-size: 1.1rem;
    border-radius: 0.5rem;
    cursor: pointer;
    font-weight: 600;
    transition: background 0.2s;
  }
  .product-add-to-cart:hover {
    background: #3a3938;
  }
  .similar-products {
    margin-top: 4rem;
  }
  .similar-products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1.5rem;
  }
  .similar-product-card {
    background: #fff;
    border-radius: 0.75rem;
    box-shadow: 0 2px 16px rgba(29, 29, 31, 0.08);
    padding: 1rem;
    text-align: center;
    transition: box-shadow 0.2s;
  }
  .similar-product-card:hover {
    box-shadow: 0 4px 24px rgba(29, 29, 31, 0.15);
  }
  .similar-product-image {
    width: 100%;
    height: 150px;
    object-fit: contain;
    background: #fff;
