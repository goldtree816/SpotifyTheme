{% comment %}
  Product Card Section
  This section displays a product card for use on collection or featured product pages.
{% endcomment %}

<section class="product-card-section">
  <main class="product-card-main">
    <div class="product-card-container">
      <div class="product-card-gallery">
        {% assign main_image = product.featured_image | default: product.images.first %}
        <img
          id="main-product-image"
          src="{{ main_image | img_url: '400x400' }}"
          alt="{{ product.title | escape }}"
          class="product-card-image"
        >
        {% if product.images.size > 1 %}
          <div class="product-card-gallery-thumbnails product-card-thumbnails-below">
            {% for image in product.images %}
              <img
                src="{{ image | img_url: '60x60' }}"
                alt="{{ product.title | escape }} thumbnail"
                class="product-card-thumbnail"
              >
            {% endfor %}
          </div>
        {% endif %}
      </div>
      <div class="product-card-details">
        <div class="product-card-title-row">
          <h1 class="product-card-title">{{ product.title }}</h1>
          <button
            class="product-card-wishlist-heart-btn"
            data-handle="{{ product.handle }}"
            aria-label="Add to Wishlist"
            title="Add to Wishlist"
          >
            <span class="product-card-wishlist-heart-icon">â™¡</span>
          </button>
        </div>
        <div class="product-card-category">{{ product.type }}</div>
        <div class="product-card-price" id="product-price">
          {% if product.price_varies %}
            From {{ product.price_min | money }} - {{ product.price_max | money }}
          {% else %}
            {{ product.price | money }}
          {% endif %}
        </div>
        <div class="product-card-description">{{ product.description }}</div>
        <form
          action="{{routes.cart_add_url}}"
          method="post"
          enctype="multipart/form-data"
          class="product-card-form"
          id="product-form"
          data-variants="{{ product.variants | json }}"
        >
          <input type="hidden" name="id" id="variant-id" value="{{ product.selected_or_first_available_variant.id }}">
          {% for option in product.options_with_values %}
            <div class="product-card-option">
              {% if option.name == 'Size' %}
                <h3>Size</h3>
                <div class="product-card-option-buttons" id="size-options">
                  {% for value in option.values %}
                    <label class="product-card-option-btn-label">
                      <input
                        type="radio"
                        name="options[{{ option.name }}]"
                        value="{{ value }}"
                        {% if forloop.first %}
                          checked
                        {% endif %}
                        class="product-card-option-btn-input"
                      >
                      <span class="product-card-option-btn">{{ value }}</span>
                    </label>
                  {% endfor %}
                </div>
              {% endif %}
              {% if option.name == 'Color' %}
                <h3>Color</h3>
                <div class="product-card-option-buttons" id="color-options">
                  {% for value in option.values %}
                    <label class="product-card-option-btn-label">
                      <input
                        type="radio"
                        name="options[{{ option.name }}]"
                        value="{{ value }}"
                        class="product-card-option-btn-input"
                      >
                      <span class="product-card-option-swatch" data-color="{{ value | downcase }}"></span>
                    </label>
                  {% endfor %}
                </div>
              {% endif %}
            </div>
            <hr class="product-card-option-separator">
          {% endfor %}
          <div class="product-card-selected-variant-price" id="selected-variant-price">
            {% comment %} After the size and color are selected, the price is shown here. If size or color is not selected, the price is not shown. {% endcomment %}
          </div>
          <div class="product-card-quantity">
            <label for="quantity">Quantity:</label>
            <input type="number" id="quantity" name="quantity" value="1" min="1" class="product-card-quantity-input">
            <button type="button" class="product-card-clear-selection-btn hidden">Clear</button>
            <button type="submit" class="product-card-add-to-cart">Add to Cart</button>
          </div>
        </form>
      </div>
    </div>
    {% if product.collections.size > 0 %}
      <div class="product-card-similar-products">
        <h2>Similar Products</h2>
        <div class="product-card-similar-products-grid">
          {% assign similar_collection = product.collections.first %}
          {% if similar_collection and similar_collection.products.size > 0 %}
            {% for similar_product in similar_collection.products %}
              {% if similar_product.id != product.id %}
                <div class="product-card-similar-product-card">
                  <a href="{{ similar_product.url }}">
                    {% if similar_product.featured_image %}
                      <img
                        src="{{ similar_product.featured_image | img_url: '300x300' }}"
                        alt="{{ similar_product.title | escape }}"
                        class="product-card-similar-product-image"
                      >
                    {% else %}
                      {{ 'no-image' | placeholder_svg_tag: '300x300' }}
                    {% endif %}
                    <div class="product-card-similar-product-title">{{ similar_product.title }}</div>
                    <div class="product-card-similar-product-price">{{ similar_product.price | money }}</div>
                  </a>
                </div>
              {% endif %}
            {% endfor %}
          {% else %}
            <p>No similar products found in this collection.</p>
          {% endif %}
        </div>
      </div>
    {% else %}
      <p>This product is not assigned to any collection.</p>
    {% endif %}
  </main>
</section>

<style>
  .product-card-section .product-card-main {
    max-width: 1250px;
    margin: 0 auto;
    padding: 3rem 1rem;
  }

  .product-card-container {
    display: flex;
    flex-wrap: wrap;
    gap: 3rem;
  }

  .product-card-gallery {
    flex: 1 1 450px;
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 350px;
  }

  .product-card-gallery-thumbnails.product-card-thumbnails-below {
    display: flex;
    gap: 1rem;
    margin-top: 1.5rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .product-card-image {
    width: 600px;
    height: 500px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .product-card-image:hover {
    transform: scale(1.02);
  }

  .product-card-thumbnail {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: 0.5rem;
    cursor: pointer;
    border: 2px solid transparent;
    transition: border-color 0.3s ease;
  }

  .product-card-thumbnail:hover {
    border-color: #cdaa7d;
  }

  .product-card-details {
    flex: 1 1 400px;
    margin-bottom: 1rem;
    flex-direction: column;
    gap: 1.5rem;
    padding: 1rem 0;
  }

  .product-card-title-row {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .product-card-title {
    font-size: 1.5rem;
    font-weight: 500;
    color: #1a1a1a;
    margin-bottom: 10px;
  }

  .product-card-category {
    font-size: 1.1rem;
    color: #888;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 10px;
  }

  .product-card-price {
    font-size: 1.5rem;
    color: #131212;
    font-weight: 600;
  }

  .product-card-form {
    margin-top: 1.5rem;
  }

  .product-card-option {
    margin-top: -10px;
  }

  .product-card-option-buttons {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .product-card-option-btn-label {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .product-card-option-btn-input {
    display: none;
  }

  .product-card-option-btn {
    display: inline-block;
    padding: 0.5rem 1rem;
    font-size: 0.8rem;
    border-radius: 0.5rem;
    border: 1px solid #1a1a1a;
    background: #fff;
    color: #1a1a1a;
    cursor: pointer;
    transition: background 0.3s, color 0.3s;
  }

  .product-card-option-btn-label input:checked + .product-card-option-btn {
    background: #1a1a1a;
    color: #fff;
  }

  .product-card-option-swatch {
    display: inline-block;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    border: 1px solid #ddd;
    cursor: pointer;
    transition: opacity 0.3s;
    background-color: var(--color, #fff);
  }

  .product-card-option-btn-label input:checked ~ .product-card-option-swatch {
    border: 2px solid #000;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.5);
  }

  .product-card-option-swatch:hover {
    opacity: 0.8;
  }

  .product-card-option-separator {
    border: 0;
    height: 1px;
    background: #e5e7eb;
    margin: 1rem 0;
  }

  .product-card-selected-variant-price {
    font-size: 1.2rem;
    color: #131212;
    margin: 1rem 0;
  }

  .product-card-quantity {
    display: flex;
    align-items: center;
    gap: 5px;
    margin: 1rem 0;
  }

  .product-card-quantity-input {
    padding: 0.5rem;
    width: 60px;
    font-size: 1rem;
    border: 1px solid #e5e7eb;
    border-radius: 0.5rem;
  }

  .product-card-clear-selection-btn {
    background: #f0f0f0;
    color: #1a1a1a;
    border: 1px solid #e5e7eb;
    padding: 0.5rem 1rem;
    font-size: 0.8rem;
    border-radius: 0.5rem;
    cursor: pointer;
    transition: background 0.3s;
  }

  .product-card-clear-selection-btn.hidden {
    display: none;
  }

  .product-card-clear-selection-btn:hover {
    background: #e0e0e0;
  }

  .product-card-add-to-cart {
    background: #131211;
    color: #fff;
    border: none;
    padding: 0.7rem;
    font-size: 0.8rem;
    border-radius: 0.5rem;
    cursor: pointer;
    font-weight: 600;
    transition: background 0.3s, transform 0.3s;
  }

  .product-card-add-to-cart:hover {
    background: #3a3938;
    transform: translateY(-2px);
  }

  .product-card-description {
    color: #444;
    font-size: 1.2rem;
    line-height: 1.7;
    margin-top: 1.5rem;
  }

  .product-card-similar-products {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid #e5e7eb;
  }

  .product-card-similar-products-grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 1.5rem;
    justify-content: flex-start;
  }

  .product-card-similar-product-card {
    background: #fff;
    border: 1px solid #e5e7eb;
    border-radius: 0.75rem;
    box-shadow: 0 2px 16px rgba(29, 29, 31, 0.08);
    padding: 1rem;
    text-align: center;
    transition: box-shadow 0.3s, transform 0.3s;
  }

  .product-card-similar-product-card:hover {
    box-shadow: 0 4px 24px rgba(29, 29, 31, 0.15);
    transform: translateY(-4px);
  }

  .product-card-similar-product-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    background: #fff;
    border-radius: 0.5rem;
    margin-bottom: 0.75rem;
    transition: transform 0.3s ease;
  }

  .product-card-similar-product-card:hover .product-card-similar-product-image {
    transform: scale(1.05);
  }

  .product-card-similar-product-title {
    font-size: 1.1rem;
    font-weight: 500;
    color: #1d1d1f;
    margin-bottom: 0.5rem;
    text-decoration: none;
  }

  .product-card-similar-product-price {
    font-size: 1.2rem;
    color: #272726c2;
    font-weight: 600;
  }

  .product-card-wishlist-heart-btn {
    background: none;
    border: none;
    cursor: pointer;
    font-size: 1.8rem;
    color: #1a1a1a;
    transition: color 0.3s;
  }

  .product-card-wishlist-heart-btn:hover .product-card-wishlist-heart-icon,
  .product-card-wishlist-heart-btn.active .product-card-wishlist-heart-icon {
    color: #cdaa7d;
  }

  .product-card-wishlist-heart-icon {
    pointer-events: none;
  }

  @media (max-width: 1024px) {
    .product-card-container {
      flex-direction: column;
      padding: 1.5rem;
    }
    .product-card-gallery {
      flex: 1 1 100%;
    }
    .product-card-details {
      flex: 1 1 100%;
      padding: 0;
    }
    .product-card-image {
      width: 350px;
      height: 350px;
    }
    .product-card-gallery-thumbnails {
      gap: 0.75rem;
    }
    .product-card-thumbnail {
      width: 60px;
      height: 60px;
    }
    .product-card-similar-products-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media (max-width: 768px) {
    .product-card-main {
      padding: 1.5rem 0.5rem;
    }
    .product-card-image {
      width: 300px;
      height: 300px;
    }
    .product-card-title {
      font-size: 2rem;
    }
    .product-card-price {
      font-size: 1.5rem;
    }
    .product-card-add-to-cart {
      font-size: 1.1rem;
    }
    .product-card-description {
      font-size: 1.1rem;
    }
    .product-card-similar-products-grid {
      grid-template-columns: 1fr;
    }
    .product-card-similar-product-image {
      height: 180px;
    }
    .product-card-similar-product-title {
      font-size: 1rem;
    }
    .product-card-similar-product-price {
      font-size: 1.1rem;
    }
  }
</style>

<script src="{{ 'product.js' | asset_url }}" defer></script>
