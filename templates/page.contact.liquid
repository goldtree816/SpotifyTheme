{% comment %}
  Contact page template: displays a contact form styled to match the theme.
{% endcomment %}
{% section 'header' %}
<main class="contact-main">
  <h1 class="contact-title">{{ 'contact.title' | t }}</h1>
  {% section 'contact-details' %}
  <div class="contact-form-wrapper">
    {% form 'contact', id: 'contact_form' %}
      {% if form.posted_successfully? %}
        <div class="contact-success">{{ 'contact.success' | t }}</div>
      {% elsif form.errors %}
        <div class="contact-error">{{ 'contact.error' | t }}</div>
      {% endif %}
      <div class="contact-form-group">
        <label for="ContactFormName" class="contact-label">{{ 'contact.name' | t }}</label>
        <input type="text" id="ContactFormName" name="contact[name]" class="contact-input" required>
      </div>
      <div class="contact-form-group">
        <label for="ContactFormEmail" class="contact-label">{{ 'contact.email' | t }}</label>
        <input type="email" id="ContactFormEmail" name="contact[email]" class="contact-input" required>
      </div>
      <div class="contact-form-group">
        <label for="ContactFormMessage" class="contact-label">{{ 'contact.message' | t }}</label>
        <textarea id="ContactFormMessage" name="contact[body]" class="contact-textarea" rows="6" required></textarea>
      </div>
      <button type="submit" class="contact-submit">{{ 'contact.submit' | t }}</button>
    {% endform %}
  </div>
</main>
{% section 'footer' %}

<style>
.contact-main {
  max-width: 600px;
  margin: 0 auto;
  padding: 3rem 1rem 4rem 1rem;
  font-family: 'Roboto Condensed', Arial, sans-serif;
  color: #1D1D1F;
}
.contact-title {
  font-size: 2.2rem;
  font-weight: 700;
  color: #CDAA7D;
  margin-bottom: 2rem;
  text-align: center;
}
.contact-form-wrapper {
  background: #fff;
  border-radius: 1rem;
  box-shadow: 0 2px 16px rgba(29,29,31,0.08);
  padding: 2rem 1.5rem 1.5rem 1.5rem;
}
.contact-form-group {
  margin-bottom: 1.5rem;
}
.contact-label {
  display: block;
  font-size: 1rem;
  font-weight: 600;
  color: #1D1D1F;
  margin-bottom: 0.5rem;
}
.contact-input, .contact-textarea {
  width: 100%;
  padding: 0.7rem 1rem;
  border: 1px solid #CDAA7D;
  border-radius: 0.5rem;
  font-size: 1rem;
  background: #f7f7fa;
  color: #1D1D1F;
  transition: border 0.2s;
}
.contact-input:focus, .contact-textarea:focus {
  border-color: #b89a6b;
  outline: none;
}
.contact-submit {
  background: #CDAA7D;
  color: #fff;
  border: none;
  padding: 0.9rem 2.5rem;
  font-size: 1.1rem;
  border-radius: 0.5rem;
  cursor: pointer;
  font-weight: 700;
  transition: background 0.2s;
  margin-top: 0.5rem;
}
.contact-submit:hover {
  background: #b89a6b;
}
.contact-success {
  background: #e6f9e6;
  color: #1d7a1d;
  border: 1px solid #b2e5b2;
  border-radius: 0.5rem;
  padding: 1rem;
  margin-bottom: 1.5rem;
  text-align: center;
  font-weight: 600;
}
.contact-error {
  background: #ffeaea;
  color: #b80000;
  border: 1px solid #ffb2b2;
  border-radius: 0.5rem;
  padding: 1rem;
  margin-bottom: 1.5rem;
  text-align: center;
  font-weight: 600;
}
.contact-details {
  background: #f7f7fa;
  border-radius: 1rem;
  box-shadow: 0 1px 8px rgba(29,29,31,0.06);
  padding: 1.5rem 1.5rem 1rem 1.5rem;
  margin-bottom: 2.5rem;
  display: flex;
  flex-wrap: wrap;
  gap: 2rem 2.5rem;
  justify-content: space-between;
}
.contact-detail-item {
  min-width: 180px;
  font-size: 1rem;
  color: #1D1D1F;
  margin-bottom: 0.5rem;
}
.contact-link {
  color: #CDAA7D;
  text-decoration: none;
  font-weight: 600;
}
.contact-link:hover {
  text-decoration: underline;
}
.contact-map {
  flex-basis: 100%;
  margin-top: 1rem;
}
@media (max-width: 600px) {
  .contact-details {
    flex-direction: column;
    gap: 1.2rem;
    padding: 1rem 0.5rem 0.5rem 0.5rem;
  }
  .contact-map iframe {
    height: 120px;
  }
}
</style> 