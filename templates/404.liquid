<div class="error-404">
  <h1>{{ settings.title }}</h1>
  <div class="rte">{{ settings.message }}</div>

  <form class="search-form" action="{{ routes.search_url }}">
    <input type="hidden" name="type" value="product">
    <input type="search" name="q" placeholder="Search our store..." aria-label="Search">
    <button type="submit">Search</button>
  </form>

  <a href="{{ routes.root_url }}" class="homepage-button">
    {{ settings.button_text }}
  </a>
</div>

<style>
  .error-404 {
    text-align: center;
    padding: 50px 20px;
    max-width: 800px;
    margin: 0 auto;
  }

