    font-family: {{ settings.type_heading_font | default: 'sans-serif' }};
    margin-bottom: 20px;
  }

  .error-404 .search-form {
    margin: 30px 0;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .error-404 .homepage-button {
    background-color: {{ settings.color_button }};
    color: {{ settings.color_button_text }};
    padding: 12px 30px;
    border-radius: 4px;
    text-decoration: none;
    display: inline-block;
    margin-top: 20px;
  }

  @media (max-width: 767px) {
    .error-404 {
      padding: 30px 15px;
    }
  }
</style>
