  font-weight: bold;
  margin: 1.5rem 0 0.75rem 0;
  color: #333333;
}
.article-body p {
  margin-bottom: 1rem;
}
.article-body ul, .article-body ol {
  margin: 1rem 0;
  padding-left: 1.5rem;
}
.article-body li {
  margin-bottom: 0.5rem;
}
.article-body a {
  color: #007bff;
  text-decoration: none;
  font-weight: bold;
}
.article-body a:hover {
  text-decoration: underline;
}
.article-image {
  width: 100%;
  max-width: 400px;
  height: auto;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}
.article-placeholder {
  width: 100%;
  max-width: 400px;
  height: 300px;
  background: #f8f9fa;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.article-placeholder-svg {
  width: 80px;
  height: 80px;
  color: #666666;
}
.article-tags {
  margin: 2rem 0;
  padding: 1rem 0;
  border-top: 1px solid #e1e5e9;
}
.article-tags-label {
  font-weight: bold;
  color: #333333;
  margin-right: 0.5rem;
}
.article-tag {
  background: #007bff;
  color: #ffffff;
  padding: 0.25rem 0.75rem;
  border-radius: 12px;
  font-size: 0.9rem;
  font-weight: bold;
  margin-right: 0.5rem;
}
.article-likes {
  text-align: center;
  margin: 2rem 0;
  padding: 1rem 0;
  border-top: 1px solid #e1e5e9;
}
.like-btn {
  background: #007bff;
  color: #ffffff;
  border: none;
  padding: 0.75rem 1.5rem;
  border-radius: 8px;
  font-size: 1rem;
  font-weight: bold;
  cursor: pointer;
  transition: background 0.2s;
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
}
.like-btn:hover {
  background: #0056b3;
}
.like-btn.liked {
  background: #28a745;
}
.like-btn i {
  font-size: 1.1rem;
}
.article-comments {
  margin-top: 3rem;
  padding-top: 2rem;
  border-top: 1px solid #e1e5e9;
}
.comments-title {
  font-size: 1.8rem;
  font-weight: bold;
  color: #333333;
  margin-bottom: 1.5rem;
}
.comment-form {
  background: #f8f9fa;
  padding: 1.5rem;
  border-radius: 8px;
  margin-bottom: 2rem;
}
.comment-form-row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1rem;
  margin-bottom: 1rem;
}
.comment-input {
  padding: 0.75rem;
  border: 1px solid #e1e5e9;
  border-radius: 6px;
  font-size: 1rem;
  background: #ffffff;
}
.comment-input:focus {
  outline: none;
  border-color: #007bff;
}
.comment-textarea {
  width: 100%;
  padding: 0.75rem;
  border: 1px solid #e1e5e9;
  border-radius: 6px;
  font-size: 1rem;
  background: #ffffff;
  min-height: 100px;
  resize: vertical;
  margin-bottom: 1rem;
}
.comment-textarea:focus {
  outline: none;
  border-color: #007bff;
}
.comment-submit {
  background: #007bff;
  color: #ffffff;
  border: none;
  padding: 0.75rem 1.5rem;
  border-radius: 6px;
  font-size: 1rem;
  font-weight: bold;
  cursor: pointer;
  transition: background 0.2s;
}
.comment-submit:hover {
  background: #0056b3;
}
.comment-error {
  background: #f8d7da;
  color: #721c24;
  padding: 1rem;
  border-radius: 6px;
  margin-top: 1rem;
}
.comment-success {
  background: #d4edda;
  color: #155724;
  padding: 1rem;
  border-radius: 6px;
  margin-top: 1rem;
}
.comments-section {
  margin-top: 2rem;
}
.comments-list-title {
  font-size: 1.4rem;
  font-weight: bold;
  color: #333333;
  margin-bottom: 1rem;
}
.comments-list {
  list-style: none;
  padding: 0;
}
.comment {
  background: #f8f9fa;
  padding: 1.5rem;
  border-radius: 8px;
  margin-bottom: 1rem;
}
.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.75rem;
}
.comment-author {
  font-weight: bold;
  color: #333333;
}
.comment-date {
  font-size: 0.9rem;
  color: #666666;
}
.comment-content {
  color: #333333;
  line-height: 1.6;
}
.no-comments {
  text-align: center;
  color: #666666;
  font-style: italic;
  padding: 2rem;
}
@media screen and (max-width: 768px) {
  .article-main {
    padding: 2rem 0;
  }
  .article-container {
    padding: 0 1rem;
  }
  .article-content {
    padding: 1.5rem;
  }
  .article-title {
    font-size: 2rem;
  }
  .article-layout {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  .article-content-left {
    order: 2;
  }
  .article-content-right {
    order: 1;
  }
  .article-image {
    max-width: 100%;
  }
  .comment-form-row {
    grid-template-columns: 1fr;
  }
  .comment-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.5rem;
  }
}
@media screen and (max-width: 480px) {
  .article-title {
    font-size: 1.8rem;
  }
  .article-content {
    padding: 1rem;
  }
  .article-meta {
    flex-direction: column;
    gap: 0.5rem;
  }
}
</style>

<script>
// Like Button with Toggle Functionality
document.addEventListener('DOMContentLoaded', function() {
  var likeBtn = document.getElementById('likeBtn');
  var likeCount = document.getElementById('likeCount');
  var count = 0;
  var isLiked = false;
  
  likeBtn.addEventListener('click', function() {
    if (isLiked) {
      // Unlike
      count--;
      likeBtn.classList.remove('liked');
      isLiked = false;
    } else {
      // Like
      count++;
      likeBtn.classList.add('liked');
      isLiked = true;
    }
    likeCount.textContent = count;
  });
});
</script>

