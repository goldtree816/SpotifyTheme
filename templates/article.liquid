{% section 'header' %}
{{ 'article.css' | asset_url | stylesheet_tag }}
<section class="article-hero">
  <div class="article-hero__container">
    <h1 class="article-title">{{ article.title }}</h1>
    <div class="article-meta">
      <span class="article-date">{{ article.published_at | date: "%B %d, %Y" }}</span>
      {% if article.author %}<span class="article-author">By {{ article.author }}</span>{% endif %}
    </div>
  </div>
</section>
<section class="article-main">
  <div class="article-container">
    {% if article.image %}
      <img src="{{ article.image | image_url: width: 900 }}" alt="{{ article.title }}" class="article-image" />
    {% endif %}
    <div class="article-body">{{ article.content }}</div>
    {% if article.tags.size > 0 %}
      <div class="article-tags">
        Tags:
        {% for tag in article.tags %}
          <span class="article-tag">{{ tag }}</span>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

{% section 'footer' %} 